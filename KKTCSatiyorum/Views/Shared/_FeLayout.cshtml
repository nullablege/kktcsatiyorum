@using Microsoft.AspNetCore.Identity
@inject SignInManager<EntityLayer.Entities.UygulamaKullanicisi> SignInManager
@inject UserManager<EntityLayer.Entities.UygulamaKullanicisi> UserManager
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | KKTCSatiyorum</title>
    <meta name="description" content="@(ViewData["Description"] ?? "KKTC'nin en guvenilir ilan platformu")">
    <meta name="robots" content="index,follow">

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico">

    <!-- Open Graph -->
    <meta property="og:site_name" content="KKTCSatiyorum">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewData["Title"] | KKTCSatiyorum">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/FE/css/styles.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <partial name="Partials/_FeHeader" />

    @RenderBody()

    <partial name="Partials/_FeFooter" />

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
