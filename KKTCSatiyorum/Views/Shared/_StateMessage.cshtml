@model StateMessageViewModel

<div class="text-center py-5">
    <div class="mb-4">
        <i class="bi @Model.Icon @Model.IconClass" style="font-size: 4rem;"></i>
    </div>
    <h3 class="h4 mb-3">@Model.Title</h3>
    <p class="text-muted mb-4" style="max-width: 500px; margin: 0 auto;">@Model.Message</p>
    
    @if (!string.IsNullOrEmpty(Model.ActionText) && !string.IsNullOrEmpty(Model.ActionAction) && !string.IsNullOrEmpty(Model.ActionController))
    {
        <div class="d-flex justify-content-center gap-2">
            <a asp-area="@Model.ActionArea" asp-controller="@Model.ActionController" asp-action="@Model.ActionAction" class="btn @Model.ActionBtnClass">
                @if (!string.IsNullOrEmpty(Model.ActionIcon))
                {
                    <i class="bi @Model.ActionIcon me-2"></i>
                }
                @Model.ActionText
            </a>
            
            @if (!string.IsNullOrEmpty(Model.SecActionText) && !string.IsNullOrEmpty(Model.SecActionAction) && !string.IsNullOrEmpty(Model.SecActionController))
            {
                 <a asp-area="@Model.SecActionArea" asp-controller="@Model.SecActionController" asp-action="@Model.SecActionAction" class="btn btn-outline-secondary">
                    @Model.SecActionText
                 </a>
            }
        </div>
    }
</div>
