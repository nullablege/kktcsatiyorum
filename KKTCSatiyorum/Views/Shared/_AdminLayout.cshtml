
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - 420 İlan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/FE/css/styles.css" rel="stylesheet">
</head>

<body>
    <!-- Admin Sidebar -->
    <aside class="admin-sidebar">
        <div class="sidebar-brand">
            <h4><i class="bi bi-shop me-2"></i>KKTC Admin</h4>
        </div>
        <nav class="sidebar-nav">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a asp-area="Admin" asp-controller="Moderasyon" asp-action="Index" class="nav-link">
                <i class="bi bi-shield-check"></i> Moderasyon
            </a>

            <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="nav-link">
                <i class="bi bi-folder"></i> Kategoriler
            </a>            
            <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="nav-link">
                <i class="bi bi-people"></i> Kullanıcılar
            </a>
            <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="nav-link">
                <i class="bi bi-megaphone"></i> İlanlar
            </a>
            <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="nav-link">
                <i class="bi bi-bar-chart"></i> Raporlar
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-gear"></i> Ayarlar
            </a>
            <a asp-area="Admin" asp-controller="Logs" asp-action="Index" class="nav-link">
                <i class="bi bi-activity"></i> Denetim Kayıtları
            </a>
            <hr class="mx-3">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                <i class="bi bi-box-arrow-left"></i> Siteye Dön
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
   
    
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>






