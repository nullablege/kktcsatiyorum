@model IReadOnlyList<KKTCSatiyorum.Models.Home.CategoryNavItemViewModel>
                <!-- LEFT SIDEBAR - Category Tree -->
                <aside class="col-lg-2 col-md-3 d-none d-md-block">
                    <div class="sidebar-categories">
                        <!-- Quick Filters -->
                        <div class="sidebar-section">
                            <a asp-controller="Listings" asp-action="Index" class="quick-link"><i class="bi bi-exclamation-circle"></i> Acil Acil</a>
                            <a asp-controller="Listings" asp-action="Index" class="quick-link"><i class="bi bi-clock"></i> Son 48 Saat / <span
                                    class="text-primary">1 Hafta</span> / <span>1 Ay</span></a>
                        </div>

                        @foreach (var category in Model)
                        {
                            <div class="sidebar-section">
                                <div class="category-header">
                                    <i class="bi bi-grid-3x3-gap"></i>
                                    <a asp-controller="Listings" asp-action="Index" asp-route-KategoriId="@category.Id" class="category-main">@category.Name</a>
                                </div>
                                @if (category.Children.Count > 0)
                                {
                                    <ul class="subcategory-list">
                                        @foreach (var child in category.Children)
                                        {
                                            <li><a asp-controller="Listings" asp-action="Index" asp-route-KategoriId="@child.Id">@child.Name</a></li>
                                        }
                                    </ul>
                                }
                            </div>
                        }
                    </div>
                </aside>
