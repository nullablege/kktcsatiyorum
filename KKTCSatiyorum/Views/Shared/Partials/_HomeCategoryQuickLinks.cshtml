@model IReadOnlyList<KKTCSatiyorum.Models.Home.CategoryNavItemViewModel>
    <!-- Secondary Nav - Category Quick Links -->
    <nav class="secondary-nav">
        <div class="container-fluid px-3">
            <div class="secondary-nav-inner">
                @foreach (var c in Model)
                {
                    <a asp-controller="Listings" asp-action="Index" asp-route-KategoriId="@c.Id" class="secondary-nav-link">@c.Name</a>
                }
                <span class="secondary-nav-divider"></span>
                <a asp-area="Member" asp-controller="Favorites" asp-action="Index" class="secondary-nav-link">Favori İlanlarım</a>
                <a asp-area="Member" asp-controller="Favorites" asp-action="Index" class="secondary-nav-link">Favori Aramalarım</a>
            </div>
        </div>
    </nav>
