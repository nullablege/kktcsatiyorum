@using Microsoft.AspNetCore.Identity
@inject SignInManager<EntityLayer.Entities.UygulamaKullanicisi> SignInManager


<nav class="navbar navbar-expand-lg navbar-custom sticky-top">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <i class="bi bi-shop"></i> KKTCSatıyorum
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

            <form class="d-none d-lg-flex mx-auto" style="max-width: 400px; flex: 1;" asp-controller="Listings" asp-action="Index" method="get">
                <div class="input-group input-group-sm">
                    <input type="text" name="Q" class="form-control" placeholder="İlan ara...">
                    <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                </div>
            </form>

            <ul class="navbar-nav ms-auto me-3">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Listings" asp-action="Index">İlanlar</a>
                </li>
            </ul>

            <div class="d-flex align-items-center gap-2">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-area="Member" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a asp-area="Member" asp-controller="Profile" asp-action="Edit" class="btn btn-outline-secondary" title="Profilim">
                        <i class="bi bi-person-gear"></i>
                    </a>
                    <a asp-area="Member" asp-controller="Favorites" asp-action="Index" class="btn btn-outline-danger" title="Favorilerim">
                        <i class="bi bi-heart"></i>
                    </a>
                    <a asp-area="Member" asp-controller="MyListings" asp-action="Create" class="btn btn-cta">
                        <i class="bi bi-plus-lg"></i> İlan Ver
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                        <i class="bi bi-person"></i> Giriş Yap
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-cta">
                        <i class="bi bi-plus-lg"></i> İlan Ver
                    </a>
                }
            </div>
        </div>
    </div>
</nav>
