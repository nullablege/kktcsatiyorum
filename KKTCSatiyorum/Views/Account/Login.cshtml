@model LoginViewModel

@{
    ViewData["Title"] = "Giris Yap";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="auth-container">
        <div class="auth-card">
            <div class="auth-logo">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-shop"></i> KKTCSatýyorum
                </a>
            </div>

            <h1 class="h2">Giriþ Yap</h1>
            <p class="text-muted text-center mb-4">Hesabýnýza giriþ yaparak ilanlara eriþin</p>

            <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@(ViewData["ReturnUrl"] as string)"  method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta Adresi</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control" asp-for="Email" id="email" placeholder="ornek@email.com" required
                               autocomplete="email">
                    </div>
                </div>
                <div style="color:red; text-align:center" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label for="password" class="form-label">Þifre</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control" asp-for="Password" id="password" placeholder="••••••••" required
                               autocomplete="current-password">
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                            <i class="bi bi-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe" id="remember">
                        <label class="form-check-label" for="remember">Beni hatýrla</label>
                    </div>
                    <a asp-controller="Home" asp-action="Contact" class="text-primary small">Þifremi unuttum?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Giriþ Yap
                </button>

                <div class="text-center mb-4">
                    <span class="text-muted">veya</span>
                </div>

                <button type="button" disabled class="btn btn-outline-secondary w-100 mb-2">
                    <i class="bi bi-google me-2"></i>Google ile Giriþ Yap
                </button>

                <button type="button" disabled class="btn btn-outline-secondary w-100">
                    <i class="bi bi-facebook me-2"></i>Facebook ile Giriþ Yap
                </button>
            </form>

            <hr class="my-4">

            <p class="text-center mb-0">
                Hesabýnýz yok mu? <a asp-controller="Account" asp-action="Register" class="text-primary fw-semibold">Kayýt Ol</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {

        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    
}
