@{
    ViewData["Title"] = "Erisim Engellendi";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<main class="main-content">
    <div class="container py-5">
        <div class="content-section text-center" style="max-width: 600px; margin: 0 auto;">
            <div class="py-4">
                <i class="bi bi-shield-lock text-warning" style="font-size: 4rem;"></i>
                <h1 class="mt-3 mb-2">403 - Erisim Engellendi</h1>
                <p class="text-muted mb-4">Bu sayfaya erisim yetkiniz bulunmuyor. Farkli bir hesap ile giris yapmak veya ana sayfaya donmek isteyebilirsiniz.</p>
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-cta">
                        <i class="bi bi-house me-1"></i>Ana Sayfa
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Giris Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>
