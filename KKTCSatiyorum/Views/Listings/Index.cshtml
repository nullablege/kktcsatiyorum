@model ListingsIndexViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Query.Q) ? "İlanlar" : $"\"{Model.Query.Q}\" için Arama Sonuçları";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";

    var eavFilters = Model.Query.EavFilters ?? new Dictionary<int, string>();
    var filledEavCount = eavFilters.Count(x => !string.IsNullOrWhiteSpace(x.Value));
    var hasFilters = !string.IsNullOrWhiteSpace(Model.Query.Q)
        || Model.Query.KategoriId.HasValue
        || !string.IsNullOrWhiteSpace(Model.Query.Sehir)
        || Model.Query.MinFiyat.HasValue
        || Model.Query.MaxFiyat.HasValue
        || !string.IsNullOrWhiteSpace(Model.Query.Sort)
        || Model.Query.UserLat.HasValue
        || filledEavCount > 0;
    var kategoriText = Model.Query.KategoriId.HasValue
        ? Model.KategoriOptions.FirstOrDefault(x => x.Value == Model.Query.KategoriId.Value.ToString())?.Text
        : null;
    var filtersUrl = Url.Action("GetFilters", "Listings");
    var eavFiltersJson = System.Text.Json.JsonSerializer.Serialize(eavFilters);
}

<div class="bg-white py-3 border-bottom">
    <div class="container">
        <form method="get" asp-controller="Listings" asp-action="Index">
            <div class="row g-2 align-items-center">
                <div class="col-lg-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input asp-for="Query.Q" name="Q" class="form-control border-start-0" placeholder="Araba, telefon, ev...">
                    </div>
                </div>
                <div class="col-6 col-lg-2">
                    <select asp-for="Query.KategoriId" name="KategoriId" asp-items="Model.KategoriOptions" class="form-select" id="kategoriSelect">
                        <option value="">Tüm Kategoriler</option>
                    </select>
                </div>
                <div class="col-6 col-lg-2">
                    <select asp-for="Query.Sehir" name="Sehir" class="form-select">
                        <option value="">Tüm KKTC</option>
                        <option>Girne</option>
                        <option>Lefkoşa</option>
                        <option>Gazimağusa</option>
                        <option>İskele</option>
                        <option>Güzelyurt</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="bi bi-search me-1"></i> Ara
                    </button>
                </div>
                <div class="col-lg-1">
                    <button class="btn btn-outline-secondary w-100" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterOffcanvas">
                        <i class="bi bi-funnel"></i>
                    </button>
                </div>
            </div>

            <input type="hidden" asp-for="Query.Sort" name="Sort">
            <input type="hidden" asp-for="Query.MinFiyat" name="MinFiyat">
            <input type="hidden" asp-for="Query.MaxFiyat" name="MaxFiyat">
            <input type="hidden" asp-for="Query.UserLat" name="UserLat" id="userLat">
            <input type="hidden" asp-for="Query.UserLng" name="UserLng" id="userLng">
            <input type="hidden" asp-for="Query.MaxDistanceKm" name="MaxDistanceKm">
            @foreach (var eav in eavFilters.Where(x => !string.IsNullOrWhiteSpace(x.Value)))
            {
                <input type="hidden" name="EavFilters[@eav.Key]" value="@eav.Value">
            }
        </form>
    </div>
</div>

<main class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 d-none d-lg-block">
                <div class="filter-sidebar">
                    <form method="get" asp-controller="Listings" asp-action="Index">
                        <input type="hidden" asp-for="Query.Q" name="Q">
                        <input type="hidden" asp-for="Query.KategoriId" name="KategoriId">
                        <input type="hidden" asp-for="Query.Sehir" name="Sehir">
                        <input type="hidden" asp-for="Query.Sort" name="Sort">
                        <input type="hidden" asp-for="Query.UserLat" name="UserLat">
                        <input type="hidden" asp-for="Query.UserLng" name="UserLng">
                        <input type="hidden" asp-for="Query.MaxDistanceKm" name="MaxDistanceKm">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">Filtreler</h5>
                            <a asp-controller="Listings" asp-action="Index" class="btn btn-link btn-sm text-muted p-0">Temizle</a>
                        </div>

                        <div class="filter-section mb-3 p-3 bg-light rounded border">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" id="nearMeToggle" @(Model.Query.UserLat.HasValue ? "checked" : "")>
                                <label class="form-check-label fw-bold" for="nearMeToggle">Yakınımdaki İlanlar</label>
                            </div>
                            <div id="distanceControl" class="@(Model.Query.UserLat.HasValue ? "" : "d-none")">
                                <label class="form-label small text-muted mb-1">Mesafe (km)</label>
                                <select asp-for="Query.MaxDistanceKm" name="MaxDistanceKm" class="form-select form-select-sm" id="maxDistanceSelect">
                                    <option value="">Seçiniz</option>
                                    <option value="5">5 km</option>
                                    <option value="10">10 km</option>
                                    <option value="25">25 km</option>
                                    <option value="50">50 km</option>
                                    <option value="100">100 km</option>
                                    <option value="200">200 km</option>
                                    <option value="500">500 km</option>
                                </select>
                            </div>
                            <div id="nearMeError" class="alert alert-warning py-2 small d-none mt-2 mb-0"></div>
                        </div>

                        <div class="filter-section">
                            <h6>Kategori</h6>
                            <select asp-for="Query.KategoriId" name="KategoriId" asp-items="Model.KategoriOptions" class="form-select form-select-sm">
                                <option value="">Tüm Kategoriler</option>
                            </select>
                        </div>

                        <div class="filter-section">
                            <h6>Fiyat Aralığı</h6>
                            <div class="row g-2 mb-2">
                                <div class="col-6">
                                    <input asp-for="Query.MinFiyat" name="MinFiyat" type="number" class="form-control form-control-sm" placeholder="Min">
                                </div>
                                <div class="col-6">
                                    <input asp-for="Query.MaxFiyat" name="MaxFiyat" type="number" class="form-control form-control-sm" placeholder="Max">
                                </div>
                            </div>
                        </div>

                        <div id="dynamicFiltersError" class="alert alert-warning py-2 small d-none mb-2"></div>
                        <div id="dynamicFiltersLoading" class="d-none mb-2">
                            <div class="d-flex align-items-center gap-2 text-muted small">
                                <span class="spinner-border spinner-border-sm"></span>
                                <span>Filtreler yükleniyor...</span>
                            </div>
                        </div>
                        <div id="dynamicFilters"></div>
                        <div id="eavData" data-eav="@eavFiltersJson" class="d-none"></div>

                        <button class="btn btn-primary w-100" type="submit">
                            <i class="bi bi-funnel me-1"></i> Filtrele
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h5 mb-1">@ViewData["Title"]</h1>
                        <span class="text-muted">@Model.Listings.TotalCount.ToString("N0") ilan bulundu</span>
                    </div>
                    <div class="d-flex gap-2">
                        <form method="get" id="sortForm">
                            <input type="hidden" asp-for="Query.Q" name="Q">
                            <input type="hidden" asp-for="Query.KategoriId" name="KategoriId">
                            <input type="hidden" asp-for="Query.Sehir" name="Sehir">
                            <input type="hidden" asp-for="Query.MinFiyat" name="MinFiyat">
                            <input type="hidden" asp-for="Query.MaxFiyat" name="MaxFiyat">
                            <input type="hidden" asp-for="Query.UserLat" name="UserLat">
                            <input type="hidden" asp-for="Query.UserLng" name="UserLng">
                            <input type="hidden" asp-for="Query.MaxDistanceKm" name="MaxDistanceKm">
                            @foreach (var eav in eavFilters.Where(x => !string.IsNullOrWhiteSpace(x.Value)))
                            {
                                <input type="hidden" name="EavFilters[@eav.Key]" value="@eav.Value">
                            }
                            <select asp-for="Query.Sort" name="Sort" asp-items="Model.SortOptions" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()"></select>
                        </form>
                        <div class="btn-group">
                            <button class="btn btn-outline-secondary btn-sm active" title="Grid" type="button">
                                <i class="bi bi-grid"></i>
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" title="List" type="button">
                                <i class="bi bi-list"></i>
                            </button>
                        </div>
                    </div>
                </div>

                @if (hasFilters)
                {
                    var baseRoute = new Dictionary<string, string?>();
                    if (!string.IsNullOrWhiteSpace(Model.Query.Q)) baseRoute["Q"] = Model.Query.Q;
                    if (Model.Query.KategoriId.HasValue) baseRoute["KategoriId"] = Model.Query.KategoriId.Value.ToString();
                    if (!string.IsNullOrWhiteSpace(Model.Query.Sehir)) baseRoute["Sehir"] = Model.Query.Sehir;
                    if (Model.Query.MinFiyat.HasValue) baseRoute["MinFiyat"] = Model.Query.MinFiyat.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                    if (Model.Query.MaxFiyat.HasValue) baseRoute["MaxFiyat"] = Model.Query.MaxFiyat.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                    if (!string.IsNullOrWhiteSpace(Model.Query.Sort)) baseRoute["Sort"] = Model.Query.Sort;
                    if (Model.Query.UserLat.HasValue) baseRoute["UserLat"] = Model.Query.UserLat.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                    if (Model.Query.UserLng.HasValue) baseRoute["UserLng"] = Model.Query.UserLng.Value.ToString(System.Globalization.CultureInfo.InvariantCulture);
                    if (Model.Query.MaxDistanceKm.HasValue) baseRoute["MaxDistanceKm"] = Model.Query.MaxDistanceKm.Value.ToString();
                    foreach (var eav in eavFilters.Where(x => !string.IsNullOrWhiteSpace(x.Value)))
                    {
                        baseRoute[$"EavFilters[{eav.Key}]"] = eav.Value;
                    }

                    var sortDisplayText = Model.Query.Sort switch
                    {
                        "eski" => "Eskiden Yeniye",
                        "fiyat_artan" => "Fiyat: Artan",
                        "fiyat_azalan" => "Fiyat: Azalan",
                        "distance" => "Mesafe: En Yakın",
                        _ => (string?)null
                    };

                    <div class="d-flex flex-wrap gap-2 mb-4 align-items-center">
                        @if (!string.IsNullOrWhiteSpace(Model.Query.Q))
                        {
                            var routeWithoutQ = new Dictionary<string, string?>(baseRoute);
                            routeWithoutQ.Remove("Q");
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                Arama: @Model.Query.Q
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutQ" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        @if (!string.IsNullOrWhiteSpace(kategoriText))
                        {
                            var routeWithoutKategori = new Dictionary<string, string?>(baseRoute);
                            routeWithoutKategori.Remove("KategoriId");
                            foreach (var key in routeWithoutKategori.Keys.Where(k => k.StartsWith("EavFilters[")).ToList())
                            {
                                routeWithoutKategori.Remove(key);
                            }
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                @kategoriText
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutKategori" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Query.Sehir))
                        {
                            var routeWithoutSehir = new Dictionary<string, string?>(baseRoute);
                            routeWithoutSehir.Remove("Sehir");
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                @Model.Query.Sehir
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutSehir" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        @if (Model.Query.MinFiyat.HasValue || Model.Query.MaxFiyat.HasValue)
                        {
                            var routeWithoutFiyat = new Dictionary<string, string?>(baseRoute);
                            routeWithoutFiyat.Remove("MinFiyat");
                            routeWithoutFiyat.Remove("MaxFiyat");
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                Fiyat: @(Model.Query.MinFiyat?.ToString("N0") ?? "0") - @(Model.Query.MaxFiyat?.ToString("N0") ?? "∞") ₺
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutFiyat" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        @if (Model.Query.UserLat.HasValue)
                        {
                            var routeWithoutNearMe = new Dictionary<string, string?>(baseRoute);
                            routeWithoutNearMe.Remove("UserLat");
                            routeWithoutNearMe.Remove("UserLng");
                            routeWithoutNearMe.Remove("MaxDistanceKm");
                            if (routeWithoutNearMe.TryGetValue("Sort", out var sortVal) && sortVal == "distance")
                            {
                                routeWithoutNearMe.Remove("Sort");
                            }
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                <i class="bi bi-geo-alt-fill"></i> Yakınımda@(Model.Query.MaxDistanceKm.HasValue ? $": {Model.Query.MaxDistanceKm} km" : "")
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutNearMe" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        @if (!string.IsNullOrWhiteSpace(sortDisplayText) && Model.Query.Sort != "distance")
                        {
                            var routeWithoutSort = new Dictionary<string, string?>(baseRoute);
                            routeWithoutSort.Remove("Sort");
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                Sıralama: @sortDisplayText
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutSort" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        @if (filledEavCount > 0)
                        {
                            var routeWithoutEav = new Dictionary<string, string?>(baseRoute);
                            foreach (var key in routeWithoutEav.Keys.Where(k => k.StartsWith("EavFilters[")).ToList())
                            {
                                routeWithoutEav.Remove(key);
                            }
                            <span class="badge bg-primary d-flex align-items-center gap-1">
                                <i class="bi bi-sliders"></i> Ek Filtreler: @filledEavCount
                                <a asp-controller="Listings" asp-action="Index" asp-all-route-data="routeWithoutEav" class="text-white ms-1" title="Kaldır"><i class="bi bi-x"></i></a>
                            </span>
                        }
                        <a asp-controller="Listings" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Filtreleri temizle
                        </a>
                    </div>
                }

                <div class="row g-3">
                    @if (!Model.Listings.Items.Any())
                    {
                        <div class="col-12">
                            <div class="card card-product">
                                <div class="card-body">
                                    @{
                                        ViewData["StateIcon"] = "bi-box-seam";
                                        ViewData["StateTitle"] = "Sonuç bulunamadı";
                                        ViewData["StateMessage"] = "Arama kriterlerinizi değiştirip tekrar deneyin.";
                                        ViewData["StateType"] = "default";
                                        ViewData["StateActionText"] = null;
                                        ViewData["StateSecActionText"] = null;
                                    }
                                    <partial name="_StateMessage" />
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        @foreach (var item in Model.Listings.Items)
                        {
                            <div class="col-6 col-md-4">
                                <a asp-controller="Listings" asp-action="Detail" asp-route-slug="@item.Slug" class="text-decoration-none">
                                    <div class="card card-product">
                                        <button class="btn-favorite" type="button"><i class="bi bi-heart"></i></button>
                                        @if (!string.IsNullOrEmpty(item.KapakFotoUrl))
                                        {
                                            <img src="@item.KapakFotoUrl" class="card-img-top" alt="@item.Baslik">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h5 class="product-title">@item.Baslik</h5>
                                            <div class="product-price">@item.Fiyat.ToString("N0") @(item.ParaBirimi == ParaBirimi.TRY ? "₺" : item.ParaBirimi.ToString())</div>
                                            <div class="product-location">
                                                <i class="bi bi-geo-alt"></i> @(item.Sehir ?? "KKTC")
                                                @if (item.DistanceKm.HasValue)
                                                {
                                                    <span class="text-primary small ms-1">(@item.DistanceKm.Value.ToString("N1") km)</span>
                                                }
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center mt-2">
                                                <span class="product-date">@item.OlusturmaTarihi.ToString("dd MMM yyyy")</span>
                                                @if (!string.IsNullOrEmpty(item.KategoriAd))
                                                {
                                                    <small class="text-muted">@item.KategoriAd</small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>

                @if (Model.Listings.TotalPages > 1)
                {
                    var baseRouteValues = new Dictionary<string, string?>
                    {
                        ["Q"] = Model.Query.Q,
                        ["KategoriId"] = Model.Query.KategoriId?.ToString(),
                        ["Sehir"] = Model.Query.Sehir,
                        ["MinFiyat"] = Model.Query.MinFiyat?.ToString(),
                        ["MaxFiyat"] = Model.Query.MaxFiyat?.ToString(),
                        ["Sort"] = Model.Query.Sort,
                        ["UserLat"] = Model.Query.UserLat?.ToString(System.Globalization.CultureInfo.InvariantCulture),
                        ["UserLng"] = Model.Query.UserLng?.ToString(System.Globalization.CultureInfo.InvariantCulture),
                        ["MaxDistanceKm"] = Model.Query.MaxDistanceKm?.ToString()
                    };
                    foreach (var eav in eavFilters.Where(x => !string.IsNullOrWhiteSpace(x.Value)))
                    {
                        baseRouteValues[$"EavFilters[{eav.Key}]"] = eav.Value;
                    }
                    <nav class="mt-5">
                        <ul class="pagination pagination-custom justify-content-center">
                            <li class="page-item @(!Model.Listings.HasPreviousPage ? "disabled" : "")">
                                @{
                                    var prevRouteValues = new Dictionary<string, string?>(baseRouteValues) { ["Page"] = (Model.Listings.Page - 1).ToString() };
                                }
                                <a class="page-link" asp-action="Index" asp-all-route-data="prevRouteValues">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.Listings.TotalPages && i <= 5; i++)
                            {
                                var pageNum = i;
                                if (Model.Listings.TotalPages > 5 && Model.Listings.Page > 3)
                                {
                                    pageNum = Model.Listings.Page - 3 + i;
                                    if (pageNum > Model.Listings.TotalPages) continue;
                                }
                                var pageRouteValues = new Dictionary<string, string?>(baseRouteValues) { ["Page"] = pageNum.ToString() };
                                <li class="page-item @(pageNum == Model.Listings.Page ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-all-route-data="pageRouteValues">@pageNum</a>
                                </li>
                            }
                            <li class="page-item @(!Model.Listings.HasNextPage ? "disabled" : "")">
                                @{
                                    var nextRouteValues = new Dictionary<string, string?>(baseRouteValues) { ["Page"] = (Model.Listings.Page + 1).ToString() };
                                }
                                <a class="page-link" asp-action="Index" asp-all-route-data="nextRouteValues">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</main>

<div class="offcanvas offcanvas-start" tabindex="-1" id="filterOffcanvas">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Filtreler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <form method="get" asp-controller="Listings" asp-action="Index" id="offcanvasFilterForm">
            <input type="hidden" asp-for="Query.Q" name="Q">
            <input type="hidden" asp-for="Query.Sort" name="Sort">
            <input type="hidden" asp-for="Query.UserLat" name="UserLat">
            <input type="hidden" asp-for="Query.UserLng" name="UserLng">
            <input type="hidden" asp-for="Query.MaxDistanceKm" name="MaxDistanceKm">

            <div class="filter-section">
                <h6>Kategori</h6>
                <select asp-for="Query.KategoriId" name="KategoriId" asp-items="Model.KategoriOptions" class="form-select form-select-sm" id="kategoriSelectOffcanvas">
                    <option value="">Tüm Kategoriler</option>
                </select>
            </div>

            <div class="filter-section">
                <h6>Fiyat Aralığı</h6>
                <div class="row g-2 mb-2">
                    <div class="col-6">
                        <input asp-for="Query.MinFiyat" name="MinFiyat" type="number" class="form-control form-control-sm" placeholder="Min">
                    </div>
                    <div class="col-6">
                        <input asp-for="Query.MaxFiyat" name="MaxFiyat" type="number" class="form-control form-control-sm" placeholder="Max">
                    </div>
                </div>
            </div>

            <div class="filter-section">
                <h6>Konum</h6>
                <select asp-for="Query.Sehir" name="Sehir" class="form-select form-select-sm mb-2">
                    <option value="">Tüm KKTC</option>
                    <option>Girne</option>
                    <option>Lefkoşa</option>
                    <option>Gazimağusa</option>
                    <option>İskele</option>
                    <option>Güzelyurt</option>
                </select>
            </div>

            <div id="dynamicFiltersOffcanvasError" class="alert alert-warning py-2 small d-none mb-2"></div>
            <div id="dynamicFiltersOffcanvasLoading" class="d-none mb-2">
                <div class="d-flex align-items-center gap-2 text-muted small">
                    <span class="spinner-border spinner-border-sm"></span>
                    <span>Filtreler yükleniyor...</span>
                </div>
            </div>
            <div id="dynamicFiltersOffcanvas"></div>

            <button class="btn btn-primary w-100 mt-3" type="submit" data-bs-dismiss="offcanvas">
                <i class="bi bi-funnel me-1"></i> Filtrele (@Model.Listings.TotalCount sonuç)
            </button>
        </form>
    </div>
</div>

@section Scripts {
<script>
    const filtersUrl = '@filtersUrl';
    const eavDataEl = document.getElementById('eavData');
    const savedEavFilters = eavDataEl ? JSON.parse(eavDataEl.dataset.eav || '{}') : {};

    const filtersCache = new Map();
    let currentAbortController = null;

    const filterElements = {
        desktop: {
            container: document.getElementById('dynamicFilters'),
            loading: document.getElementById('dynamicFiltersLoading'),
            error: document.getElementById('dynamicFiltersError')
        },
        offcanvas: {
            container: document.getElementById('dynamicFiltersOffcanvas'),
            loading: document.getElementById('dynamicFiltersOffcanvasLoading'),
            error: document.getElementById('dynamicFiltersOffcanvasError')
        }
    };

    function setLoadingState(show) {
        Object.values(filterElements).forEach(els => {
            if (els.loading) els.loading.classList.toggle('d-none', !show);
            if (show && els.error) els.error.classList.add('d-none');
        });
    }

    function showError(message) {
        Object.values(filterElements).forEach(els => {
            if (els.container) els.container.innerHTML = '';
            if (els.error) {
                els.error.textContent = message;
                els.error.classList.remove('d-none');
            }
        });
    }

    function hideError() {
        Object.values(filterElements).forEach(els => {
            if (els.error) els.error.classList.add('d-none');
        });
    }

    function renderDynamicFilters(attrs, container, selectedValues) {
        container.innerHTML = '';
        attrs.forEach(attr => {
            const section = document.createElement('div');
            section.className = 'filter-section';

            const heading = document.createElement('h6');
            heading.textContent = attr.ad;
            section.appendChild(heading);

            const savedVal = selectedValues[attr.id] || '';

            if (attr.secenekler && attr.secenekler.length > 0) {
                const select = document.createElement('select');
                select.name = `EavFilters[${attr.id}]`;
                select.className = 'form-select form-select-sm';

                const defaultOpt = document.createElement('option');
                defaultOpt.value = '';
                defaultOpt.textContent = 'Seçiniz';
                select.appendChild(defaultOpt);

                attr.secenekler.forEach(s => {
                    const opt = document.createElement('option');
                    opt.value = s.id;
                    opt.textContent = s.deger;
                    if (String(s.id) === String(savedVal)) {
                        opt.selected = true;
                    }
                    select.appendChild(opt);
                });

                section.appendChild(select);
            } else {
                const input = document.createElement('input');
                input.type = 'text';
                input.name = `EavFilters[${attr.id}]`;
                input.className = 'form-control form-control-sm';
                input.placeholder = attr.ad;
                input.value = savedVal;
                section.appendChild(input);
            }

            container.appendChild(section);
        });
    }

    function applyFiltersToContainers(attrs) {
        Object.values(filterElements).forEach(els => {
            if (els.container) renderDynamicFilters(attrs, els.container, savedEavFilters);
        });
    }

    async function loadDynamicFilters(kategoriId) {
        if (currentAbortController) {
            currentAbortController.abort();
        }

        Object.values(filterElements).forEach(els => {
            if (els.container) els.container.innerHTML = '';
        });
        hideError();

        if (!kategoriId) {
            setLoadingState(false);
            return;
        }

        if (filtersCache.has(kategoriId)) {
            setLoadingState(false);
            applyFiltersToContainers(filtersCache.get(kategoriId));
            return;
        }

        currentAbortController = new AbortController();
        const signal = currentAbortController.signal;

        setLoadingState(true);

        try {
            const response = await fetch(`${filtersUrl}?kategoriId=${encodeURIComponent(kategoriId)}`, { signal });

            if (!response.ok) {
                throw new Error('Filtreler yüklenemedi.');
            }

            const attrs = await response.json();

            if (!Array.isArray(attrs)) {
                throw new Error('Geçersiz filtre verisi.');
            }

            filtersCache.set(kategoriId, attrs);
            applyFiltersToContainers(attrs);
        } catch (err) {
            if (err.name === 'AbortError') return;
            showError(err.message || 'Filtreler yüklenirken bir hata oluştu.');
        } finally {
            setLoadingState(false);
        }
    }

    const kategoriSelect = document.getElementById('kategoriSelect');
    const kategoriSelectOffcanvas = document.getElementById('kategoriSelectOffcanvas');

    if (kategoriSelect) {
        kategoriSelect.addEventListener('change', function() {
            loadDynamicFilters(this.value);
            if (kategoriSelectOffcanvas) kategoriSelectOffcanvas.value = this.value;
        });
    }

    if (kategoriSelectOffcanvas) {
        kategoriSelectOffcanvas.addEventListener('change', function() {
            loadDynamicFilters(this.value);
            if (kategoriSelect) kategoriSelect.value = this.value;
        });
    }

    document.addEventListener('DOMContentLoaded', function() {
        const initialKategoriId = kategoriSelect?.value || kategoriSelectOffcanvas?.value;
        if (initialKategoriId) {
            loadDynamicFilters(initialKategoriId);
        }
    });

    const nearMeToggle = document.getElementById('nearMeToggle');
    const distanceControl = document.getElementById('distanceControl');
    const maxDistanceSelect = document.getElementById('maxDistanceSelect');
    const nearMeError = document.getElementById('nearMeError');

    function showNearMeError(msg) {
        if (nearMeError) {
            nearMeError.textContent = msg;
            nearMeError.classList.remove('d-none');
        }
    }

    function hideNearMeError() {
        if (nearMeError) {
            nearMeError.textContent = '';
            nearMeError.classList.add('d-none');
        }
    }

    if (nearMeToggle) {
        nearMeToggle.addEventListener('change', function() {
            if (this.checked) {
                hideNearMeError();

                if (!navigator.geolocation) {
                    showNearMeError('Tarayıcınız konum servisini desteklemiyor.');
                    this.checked = false;
                    return;
                }

                this.disabled = true;
                document.body.style.cursor = 'wait';

                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        hideNearMeError();
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;

                        const form = this.closest('form');
                        if (form) {
                            form.querySelector('input[name="UserLat"]').value = lat;
                            form.querySelector('input[name="UserLng"]').value = lng;
                            form.querySelector('input[name="Sort"]').value = 'distance';

                            const distSelect = form.querySelector('select[name="MaxDistanceKm"]');
                            if (!distSelect.value) distSelect.value = '50';

                            form.submit();
                        }
                    },
                    (error) => {
                        console.error(error);
                        showNearMeError('Konum alınamadı. Lütfen konum izni verdiğinizden emin olun.');
                        this.checked = false;
                        this.disabled = false;
                        document.body.style.cursor = 'default';
                        distanceControl.classList.add('d-none');
                    }
                );
            } else {
                hideNearMeError();
                const form = this.closest('form');
                if (form) {
                    form.querySelector('input[name="UserLat"]').value = '';
                    form.querySelector('input[name="UserLng"]').value = '';
                    if (form.querySelector('input[name="Sort"]').value === 'distance') {
                        form.querySelector('input[name="Sort"]').value = '';
                    }
                    form.querySelector('select[name="MaxDistanceKm"]').value = '';

                    form.submit();
                }
            }
        });
    }

    if (maxDistanceSelect) {
        maxDistanceSelect.addEventListener('change', function() {
            if (nearMeToggle.checked) {
                this.closest('form').submit();
            }
        });
    }
</script>
