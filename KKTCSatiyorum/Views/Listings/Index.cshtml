@using KKTCSatiyorum.Models.Listings
@model ListingsIndexViewModel

@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Query.Q) ? "İlanlar" : $"\"{Model.Query.Q}\" için Arama Sonuçları";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Search Bar -->
<div class="bg-white py-3 border-bottom">
    <div class="container">
        <form method="get" asp-controller="Listings" asp-action="Index">
            <div class="row g-2 align-items-center">
                <div class="col-lg-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input asp-for="Query.Q" class="form-control border-start-0" placeholder="Araba, telefon, ev...">
                    </div>
                </div>
                <div class="col-6 col-lg-2">
                    <select asp-for="Query.KategoriId" asp-items="Model.KategoriOptions" class="form-select" id="kategoriSelect">
                        <option value="">Tüm Kategoriler</option>
                    </select>
                </div>
                <div class="col-6 col-lg-2">
                    <input asp-for="Query.Sehir" class="form-control" placeholder="Şehir">
                </div>
                <div class="col-lg-2 d-flex gap-2">
                    <button class="btn btn-primary flex-grow-1" type="submit">
                        <i class="bi bi-search"></i> Ara
                    </button>
                </div>
                <div class="col-lg-1">
                    <button class="btn btn-outline-secondary w-100" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#filterOffcanvas">
                        <i class="bi bi-funnel"></i>
                    </button>
                </div>
            </div>
            
            <!-- Hidden inputs for current filters -->
            <input type="hidden" asp-for="Query.Sort">
            <input type="hidden" asp-for="Query.UserLat" id="userLat">
            <input type="hidden" asp-for="Query.UserLng" id="userLng">
            <input type="hidden" asp-for="Query.MaxDistanceKm">
        </form>
    </div>
</div>

<!-- Main Content -->
<main class="py-4">
    <div class="container">
        <div class="row">
            <!-- Filters Sidebar - Desktop -->
            <div class="col-lg-3 d-none d-lg-block">
                <div class="filter-sidebar">
                    <form method="get" asp-controller="Listings" asp-action="Index">
                        <input type="hidden" name="Q" value="@Model.Query.Q">
                        <input type="hidden" name="KategoriId" value="@Model.Query.KategoriId">
                        <input type="hidden" name="Sehir" value="@Model.Query.Sehir">
                        <input type="hidden" name="Sort" value="@Model.Query.Sort">
                        <input type="hidden" asp-for="Query.UserLat">
                        <input type="hidden" asp-for="Query.UserLng">
                        <input type="hidden" asp-for="Query.MaxDistanceKm">
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">Filtreler</h5>
                            <a asp-controller="Listings" asp-action="Index" class="btn btn-link btn-sm text-muted p-0">Temizle</a>
                        </div>

                        <!-- Near Me Filter -->
                        <div class="filter-section mb-3 p-3 bg-light rounded border">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" id="nearMeToggle" @(Model.Query.UserLat.HasValue ? "checked" : "")>
                                <label class="form-check-label fw-bold" for="nearMeToggle">Yakınımdaki İlanlar</label>
                            </div>
                            <div id="distanceControl" class="@(Model.Query.UserLat.HasValue ? "" : "d-none")">
                                <label class="form-label small text-muted mb-1">Mesafe (km)</label>
                                <select asp-for="Query.MaxDistanceKm" class="form-select form-select-sm" id="maxDistanceSelect">
                                    <option value="">Seçiniz</option>
                                    <option value="5">5 km</option>
                                    <option value="10">10 km</option>
                                    <option value="25">25 km</option>
                                    <option value="50">50 km</option>
                                    <option value="100">100 km</option>
                                    <option value="200">200 km</option>
                                    <option value="500">500 km</option>
                                </select>
                            </div>
                        </div>

                        <!-- Price Filter -->
                        <div class="filter-section">
                            <h6>Fiyat Aralığı</h6>
                            <div class="row g-2 mb-2">
                                <div class="col-6">
                                    <input type="number" name="MinFiyat" class="form-control form-control-sm" placeholder="Min" value="@Model.Query.MinFiyat">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="MaxFiyat" class="form-control form-control-sm" placeholder="Max" value="@Model.Query.MaxFiyat">
                                </div>
                            </div>
                        </div>

                        <!-- Dynamic EAV Filters -->
                        <div id="dynamicFilters"></div>

                        <button class="btn btn-primary w-100" type="submit">
                            <i class="bi bi-funnel me-1"></i> Filtrele
                        </button>
                    </form>
                </div>
            </div>

            <!-- Results -->
            <div class="col-lg-9">
                <!-- Results Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h5 mb-1">@ViewData["Title"]</h1>
                        <span class="text-muted">@Model.Listings.TotalCount.ToString("N0") ilan bulundu</span>
                    </div>
                    <div class="d-flex gap-2">
                        <form method="get" id="sortForm">
                            <input type="hidden" asp-for="Query.Q">
                            <input type="hidden" asp-for="Query.KategoriId">
                            <input type="hidden" asp-for="Query.Sehir">
                            <input type="hidden" asp-for="Query.MinFiyat">
                            <input type="hidden" asp-for="Query.MaxFiyat">
                            <input type="hidden" asp-for="Query.UserLat">
                            <input type="hidden" asp-for="Query.UserLng">
                            <input type="hidden" asp-for="Query.MaxDistanceKm">
                            <select asp-for="Query.Sort" asp-items="Model.SortOptions" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                            </select>
                        </form>
                    </div>
                </div>

                @if (Model.Listings.Items.Count == 0)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Arama kriterlerinize uygun ilan bulunamadı.
                    </div>
                }
                else
                {
                    <!-- Product Grid -->
                    <div class="row g-3">
                        @foreach (var item in Model.Listings.Items)
                        {
                            <div class="col-6 col-md-4">
                                <a asp-action="Detail" asp-route-slug="@item.Slug" class="text-decoration-none">
                                    <div class="card card-product">
                                        <button class="btn-favorite"><i class="bi bi-heart"></i></button>
                                        @if (!string.IsNullOrEmpty(item.KapakFotoUrl))
                                        {
                                            <img src="@item.KapakFotoUrl" class="card-img-top" alt="@item.Baslik" style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h5 class="product-title">@item.Baslik</h5>
                                            <div class="product-price">@item.Fiyat.ToString("N0") @(item.ParaBirimi == ParaBirimi.TRY ? "₺" : item.ParaBirimi.ToString())</div>
                                            <div class="product-location">
                                                <i class="bi bi-geo-alt"></i> @(item.Sehir ?? "KKTC")
                                                @if (item.DistanceKm.HasValue)
                                                {
                                                    <span class="text-primary small ms-1">(@item.DistanceKm.Value.ToString("N1") km)</span>
                                                }
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center mt-2">
                                                <span class="product-date">@item.OlusturmaTarihi.ToString("dd MMM yyyy")</span>
                                                @if (!string.IsNullOrEmpty(item.KategoriAd))
                                                {
                                                    <small class="text-muted">@item.KategoriAd</small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (Model.Listings.TotalPages > 1)
                    {
                        <nav class="mt-5">
                            <ul class="pagination pagination-custom justify-content-center">
                                <li class="page-item @(!Model.Listings.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-Q="@Model.Query.Q" 
                                       asp-route-KategoriId="@Model.Query.KategoriId"
                                       asp-route-Sehir="@Model.Query.Sehir"
                                       asp-route-MinFiyat="@Model.Query.MinFiyat"
                                       asp-route-MaxFiyat="@Model.Query.MaxFiyat"
                                       asp-route-Sort="@Model.Query.Sort"
                                       asp-route-UserLat="@Model.Query.UserLat"
                                       asp-route-UserLng="@Model.Query.UserLng"
                                       asp-route-MaxDistanceKm="@Model.Query.MaxDistanceKm"
                                       asp-route-Page="@(Model.Listings.Page - 1)">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.Listings.TotalPages && i <= 5; i++)
                                {
                                    var pageNum = i;
                                    if (Model.Listings.TotalPages > 5 && Model.Listings.Page > 3)
                                    {
                                        pageNum = Model.Listings.Page - 3 + i;
                                        if (pageNum > Model.Listings.TotalPages) continue;
                                    }
                                    <li class="page-item @(pageNum == Model.Listings.Page ? "active" : "")">
                                        <a class="page-link" asp-action="Index" 
                                           asp-route-Q="@Model.Query.Q" 
                                           asp-route-KategoriId="@Model.Query.KategoriId"
                                           asp-route-Sehir="@Model.Query.Sehir"
                                           asp-route-MinFiyat="@Model.Query.MinFiyat"
                                           asp-route-MaxFiyat="@Model.Query.MaxFiyat"
                                           asp-route-Sort="@Model.Query.Sort"
                                           asp-route-UserLat="@Model.Query.UserLat"
                                           asp-route-UserLng="@Model.Query.UserLng"
                                           asp-route-MaxDistanceKm="@Model.Query.MaxDistanceKm"
                                           asp-route-Page="@pageNum">@pageNum</a>
                                    </li>
                                }
                                <li class="page-item @(!Model.Listings.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-Q="@Model.Query.Q" 
                                       asp-route-KategoriId="@Model.Query.KategoriId"
                                       asp-route-Sehir="@Model.Query.Sehir"
                                       asp-route-MinFiyat="@Model.Query.MinFiyat"
                                       asp-route-MaxFiyat="@Model.Query.MaxFiyat"
                                       asp-route-Sort="@Model.Query.Sort"
                                       asp-route-UserLat="@Model.Query.UserLat"
                                       asp-route-UserLng="@Model.Query.UserLng"
                                       asp-route-MaxDistanceKm="@Model.Query.MaxDistanceKm"
                                       asp-route-Page="@(Model.Listings.Page + 1)">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                }
            </div>
        </div>
    </div>
</main>

<!-- Mobile Filter Offcanvas -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="filterOffcanvas">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Filtreler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <form method="get" asp-controller="Listings" asp-action="Index">
            <input type="hidden" asp-for="Query.Q">
            <input type="hidden" asp-for="Query.Sort">
            <input type="hidden" asp-for="Query.UserLat">
            <input type="hidden" asp-for="Query.UserLng">
            <input type="hidden" asp-for="Query.MaxDistanceKm">
            
            <div class="filter-section">
                <h6>Kategori</h6>
                <select asp-for="Query.KategoriId" asp-items="Model.KategoriOptions" class="form-select form-select-sm">
                    <option value="">Tüm Kategoriler</option>
                </select>
            </div>

            <div class="filter-section">
                <h6>Fiyat Aralığı</h6>
                <div class="row g-2 mb-2">
                    <div class="col-6">
                        <input asp-for="Query.MinFiyat" type="number" class="form-control form-control-sm" placeholder="Min">
                    </div>
                    <div class="col-6">
                        <input asp-for="Query.MaxFiyat" type="number" class="form-control form-control-sm" placeholder="Max">
                    </div>
                </div>
            </div>

            <div class="filter-section">
                <h6>Şehir</h6>
                <input asp-for="Query.Sehir" class="form-control form-control-sm" placeholder="Şehir">
            </div>

            <button class="btn btn-primary w-100 mt-3" type="submit" data-bs-dismiss="offcanvas">
                <i class="bi bi-funnel me-1"></i> Filtrele (@Model.Listings.TotalCount sonuç)
            </button>
        </form>
    </div>
</div>

@section Scripts {
<script>
    document.getElementById('kategoriSelect')?.addEventListener('change', function() {
        // ... existing code ...
        const kategoriId = this.value;
        const container = document.getElementById('dynamicFilters');
        
        // Clear existing content
        container.innerHTML = '';
        
        if (!kategoriId) return;
        
        fetch(`/ilanlar/filters?kategoriId=${kategoriId}`)
            .then(res => res.json())
            .then(attrs => {
                attrs.forEach(attr => {
                    const section = document.createElement('div');
                    section.className = 'filter-section';
                    
                    const heading = document.createElement('h6');
                    heading.textContent = attr.ad;
                    section.appendChild(heading);
                    
                    if (attr.secenekler && attr.secenekler.length > 0) {
                        const select = document.createElement('select');
                        select.name = `Query.EavFilters[${attr.id}]`;
                        select.className = 'form-select form-select-sm';
                        
                        const defaultOpt = document.createElement('option');
                        defaultOpt.value = '';
                        defaultOpt.textContent = 'Seçiniz';
                        select.appendChild(defaultOpt);
                        
                        attr.secenekler.forEach(s => {
                            const opt = document.createElement('option');
                            opt.value = s.id;
                            opt.textContent = s.deger;
                            select.appendChild(opt);
                        });
                        
                        section.appendChild(select);
                    } else {
                        const input = document.createElement('input');
                        input.type = 'text';
                        input.name = `Query.EavFilters[${attr.id}]`;
                        input.className = 'form-control form-control-sm';
                        input.placeholder = attr.ad;
                        section.appendChild(input);
                    }
                    
                    container.appendChild(section);
                });
            });
    });

    // Near Me Toggle Logic
    const nearMeToggle = document.getElementById('nearMeToggle');
    const distanceControl = document.getElementById('distanceControl');
    const maxDistanceSelect = document.getElementById('maxDistanceSelect');
    const userLatInput = document.querySelector('input[name="Query.UserLat"]'); // Sidebar input
    const userLngInput = document.querySelector('input[name="Query.UserLng"]'); // Sidebar input
    
    // Also grab hidden inputs from the main sidebar form to update them directly
    // Note: The view has multiple forms (top bar, sidebar, mobile). We strictly target sidebar form inputs for submission.
    // However, asp-for generates same name. We should ensure we update the form we are submitting.
    // The sidebar form is the one containing the toggle.

    if (nearMeToggle) {
        nearMeToggle.addEventListener('change', function() {
            if (this.checked) {
                // User turned ON "Near Me"
                if (!navigator.geolocation) {
                    alert('Tarayıcınız konum servisini desteklemiyor.');
                    this.checked = false;
                    return;
                }

                this.disabled = true; // prevent double clicks
                document.body.style.cursor = 'wait';

                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;
                        
                        // Set inputs in the sidebar form
                        // Find the form that contains the toggle
                        const form = this.closest('form');
                        if (form) {
                            form.querySelector('input[name="Query.UserLat"]').value = lat;
                            form.querySelector('input[name="Query.UserLng"]').value = lng;
                            form.querySelector('input[name="Sort"]').value = 'distance'; // Force sort by distance
                            
                            // If no distance selected, default to 50km
                            const distSelect = form.querySelector('select[name="Query.MaxDistanceKm"]');
                            if (!distSelect.value) distSelect.value = '50';
                            
                            form.submit();
                        }
                    },
                    (error) => {
                        console.error(error);
                        alert('Konum alınamadı. Lütfen konum izni verdiğinizden emin olun.');
                        this.checked = false;
                        this.disabled = false;
                        document.body.style.cursor = 'default';
                        distanceControl.classList.add('d-none');
                    }
                );
            } else {
                // User turned OFF "Near Me"
                const form = this.closest('form');
                if (form) {
                    form.querySelector('input[name="Query.UserLat"]').value = '';
                    form.querySelector('input[name="Query.UserLng"]').value = '';
                     // Optional: Reset sort or keep it? Request says "graceful fallback". 
                     // Usually better to keep sort or reset to default. Let's reset to default (newest) implies clearing 'distance' sort if set.
                     if (form.querySelector('input[name="Sort"]').value === 'distance') {
                         form.querySelector('input[name="Sort"]').value = '';
                     }
                    form.querySelector('select[name="Query.MaxDistanceKm"]').value = '';
                    
                    form.submit();
                }
            }
        });
    }

    if (maxDistanceSelect) {
        maxDistanceSelect.addEventListener('change', function() {
            if (nearMeToggle.checked) {
                this.closest('form').submit();
            }
        });
    }
</script>
}
