@model ListingDetailDto
@using EntityLayer.Enums
@{
    ViewData["Title"] = Model.Baslik;
    Layout = "~/Views/Shared/_FeLayout.cshtml";
}

<!-- Breadcrumb -->
<div class="bg-white py-3 border-bottom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="Listings" asp-action="Index">İlanlar</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Baslik</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Main Content -->
<main class="py-4">
    <div class="container">
        <div class="row g-4">
            <!-- Left Column: Gallery & Details -->
            <div class="col-lg-8">
                <!-- Image Gallery -->
                <div class="card mb-4">
                    @if (Model.Fotograflar.Count > 0)
                    {
                        <div class="gallery-main">
                            <div id="productCarousel" class="carousel slide" data-bs-ride="false">
                                <div class="carousel-inner">
                                    @for (int i = 0; i < Model.Fotograflar.Count; i++)
                                    {
                                        var foto = Model.Fotograflar[i];
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@foto.Url" class="d-block w-100" alt="@Model.Baslik Görsel @(i+1)"
                                                 style="height: 400px; object-fit: cover;" loading="@(i == 0 ? "eager" : "lazy")">
                                        </div>
                                    }
                                </div>
                                @if (Model.Fotograflar.Count > 1)
                                {
                                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                        <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                    </button>
                                }
                            </div>
                        </div>

                        @if (Model.Fotograflar.Count > 1)
                        {
                            <!-- Thumbnails -->
                            <div class="card-body">
                                <div class="gallery-thumbs">
                                    @for (int i = 0; i < Model.Fotograflar.Count; i++)
                                    {
                                        var foto = Model.Fotograflar[i];
                                        <img src="@foto.Url" alt="Thumb @(i+1)" class="@(i == 0 ? "active" : "")"
                                             data-bs-target="#productCarousel" data-bs-slide-to="@i"
                                             style="width: 80px; height: 60px; object-fit: cover; cursor: pointer;">
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                            <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                        </div>
                    }
                </div>

                <!-- Product Info -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h1 class="h3 mb-2">@Model.Baslik</h1>
                                <div class="d-flex align-items-center gap-3 text-muted">
                                    <span><i class="bi bi-geo-alt me-1"></i>@(Model.Sehir ?? "KKTC")</span>
                                    <span><i class="bi bi-calendar me-1"></i>@Model.OlusturmaTarihi.ToString("dd MMMM yyyy")</span>
                                </div>
                            </div>
                            
                            @{
                                var isFavorite = (bool)(ViewBag.IsFavorite ?? false);
                            }
                            <button id="btn-toggle-favorite" class="btn @(isFavorite ? "btn-danger" : "btn-outline-secondary")" data-id="@Model.Id">
                                <i class="bi @(isFavorite ? "bi-heart-fill" : "bi-heart")"></i> <span id="fav-text">@(isFavorite ? "Favorilerden Çıkar" : "Favorilere Ekle")</span>
                            </button>
                            @Html.AntiForgeryToken()
                        </div>

                        <div class="product-price display-5 text-primary fw-bold mb-4">
                            @Model.Fiyat.ToString("N0") @(Model.ParaBirimi == ParaBirimi.TRY ? "₺" : Model.ParaBirimi.ToString())
                        </div>

                        @if (Model.Attributes.Count > 0)
                        {
                            <!-- EAV Dynamic Attributes -->
                            <h5 class="mb-3">İlan Özellikleri</h5>
                            <div class="eav-attributes mb-4">
                                @foreach (var attr in Model.Attributes)
                                {
                                    <div class="eav-item">
                                        <span class="eav-label">@attr.Label</span>
                                        <span class="eav-value">@attr.Value</span>
                                    </div>
                                }
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Aciklama))
                        {
                            <!-- Description -->
                            <h5 class="mb-3">Açıklama</h5>
                            <div class="mb-4" style="white-space: pre-line">@Model.Aciklama</div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column: Seller Info & Actions -->
            <div class="col-lg-4">
                <!-- Price Card (Mobile Sticky) -->
                <div class="card mb-4 d-lg-none">
                    <div class="card-body">
                        <div class="product-price h3 text-primary fw-bold mb-3">
                            @Model.Fiyat.ToString("N0") @(Model.ParaBirimi == ParaBirimi.TRY ? "₺" : Model.ParaBirimi.ToString())
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-cta btn-lg">
                                <i class="bi bi-telephone me-2"></i>Ara
                            </button>
                            <button class="btn btn-outline-primary">
                                <i class="bi bi-chat me-2"></i>Mesaj Gönder
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Seller Card -->
                <div class="seller-card mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="seller-avatar me-3">
                            <i class="bi bi-person"></i>
                        </div>
                        <div>
                            <div class="seller-name">@(Model.SaticiAd ?? "Satıcı")</div>
                            <div class="seller-since">
                                <i class="bi bi-patch-check-fill text-primary me-1"></i>
                                Doğrulanmış Üye
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-cta btn-lg">
                            <i class="bi bi-telephone me-2"></i>İletişim Bilgisi
                        </button>
                        <button class="btn btn-outline-primary">
                            <i class="bi bi-chat me-2"></i>Mesaj Gönder
                        </button>
                    </div>
                </div>

                <!-- Safety Tips -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h6 class="mb-3"><i class="bi bi-shield-check text-success me-2"></i>Güvenlik İpuçları</h6>
                        <ul class="list-unstyled mb-0 small text-muted">
                            <li class="mb-2"><i class="bi bi-check text-success me-1"></i>Ürünü görmeden ödeme yapmayın</li>
                            <li class="mb-2"><i class="bi bi-check text-success me-1"></i>Şüpheli ilanları bize bildirin</li>
                            <li class="mb-2"><i class="bi bi-check text-success me-1"></i>Halka açık yerlerde buluşun</li>
                            <li><i class="bi bi-check text-success me-1"></i>Bankaya özel bilgi vermeyin</li>
                        </ul>
                    </div>
                </div>

                <!-- Report -->
                <div class="text-center">
                    <button class="btn btn-link text-muted">
                        <i class="bi bi-flag me-1"></i>İlanı Şikayet Et
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Thumbnail click handler
        const thumbs = document.querySelectorAll('.gallery-thumbs img');
        thumbs.forEach(thumb => {
            thumb.addEventListener('click', function () {
                thumbs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Sync carousel with thumbnails
        const carousel = document.getElementById('productCarousel');
        if (carousel) {
            carousel.addEventListener('slid.bs.carousel', function (e) {
                thumbs.forEach(t => t.classList.remove('active'));
                if (thumbs[e.to]) thumbs[e.to].classList.add('active');
            });
        }

        // Favorite Toggle
        const btnFav = document.getElementById('btn-toggle-favorite');
        if(btnFav) {
            btnFav.addEventListener('click', function() {
                const id = this.dataset.id;
                const icon = this.querySelector('i');
                const textSpan = document.getElementById('fav-text');
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                // Optimistic UI update
                const wasFavorite = this.classList.contains('btn-danger');
                
                // Toggle UI
                // We'll revert if error
                if(!wasFavorite) {
                    this.classList.remove('btn-outline-secondary');
                    this.classList.add('btn-danger');
                    icon.classList.remove('bi-heart');
                    icon.classList.add('bi-heart-fill');
                    textSpan.textContent = "Favorilerden Çıkar";
                } else {
                    this.classList.remove('btn-danger');
                    this.classList.add('btn-outline-secondary');
                    icon.classList.remove('bi-heart-fill');
                    icon.classList.add('bi-heart');
                    textSpan.textContent = "Favorilere Ekle";
                }

                // Send Request
                fetch('/Favorites/Toggle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: `ilanId=${id}`
                })
                .then(response => {
                    if(response.status === 401) {
                         window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                         throw new Error('Unauthorized');
                    }
                    if(!response.ok) throw new Error('Network response was not ok');
                    return response.json();
                })
                .then(data => {
                    // Ideally sync state with data.isFavorite
                    if(data.isFavorite) {
                        this.classList.remove('btn-outline-secondary');
                        this.classList.add('btn-danger');
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        textSpan.textContent = "Favorilerden Çıkar";
                    } else {
                        this.classList.remove('btn-danger');
                        this.classList.add('btn-outline-secondary');
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        textSpan.textContent = "Favorilere Ekle";
                    }
                })
                .catch(error => {
                    if(error.message !== 'Unauthorized') {
                        alert('İşlem sırasında bir hata oluştu');
                        // Revert UI if needed (simple reload or logical revert)
                        location.reload(); 
                    }
                });
            });
        }
    });
</script>
}
