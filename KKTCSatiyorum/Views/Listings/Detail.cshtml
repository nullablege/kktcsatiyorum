@model ListingDetailDto
@using EntityLayer.Enums
@using System.Globalization
@{
    var listing = Model;
    ViewData["Title"] = listing?.Baslik ?? "İlan bulunamadı";
    
    var cleanDescription = listing?.Aciklama ?? "";
    if (cleanDescription.Length > 155) cleanDescription = cleanDescription.Substring(0, 155) + "...";
    ViewData["Description"] = cleanDescription;
    ViewData["Canonical"] = $"{Context.Request.Scheme}://{Context.Request.Host}{Url.Action("Detail", "Listings", new { slug = listing?.Slug })}";
    
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@if (listing == null)
{
    <main class="py-4">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <partial name="_StateMessage" model='new StateMessageViewModel {
                        Icon = "bi-archive",
                        IconClass = "text-muted",
                        Title = "İlan bulunamadı",
                        Message = "Aradığınız ilan yayında değil veya kaldırılmış olabilir.",
                        ActionText = "İlanlara Dön",
                        ActionController = "Listings",
                        ActionAction = "Index",
                        ActionBtnClass = "btn-primary",
                        ActionIcon = "bi-arrow-left"
                    }' />
                </div>
            </div>
        </div>
    </main>
}
else
{
    <div class="bg-white py-3 border-bottom">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Listings" asp-action="Index">İlanlar</a></li>
                    @if (!string.IsNullOrWhiteSpace(Model.KategoriAd))
                    {
                        <li class="breadcrumb-item"><a asp-controller="Listings" asp-action="Index" asp-route-KategoriId="@Model.KategoriId">@Model.KategoriAd</a></li>
                    }
                    <li class="breadcrumb-item active" aria-current="page">@Model.Baslik</li>
                </ol>
            </nav>
        </div>
    </div>

    <main class="py-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card mb-4">
                        @if (Model.Fotograflar.Count > 0)
                        {
                            <div class="gallery-main">
                                <div id="productCarousel" class="carousel slide" data-bs-ride="false">
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < Model.Fotograflar.Count; i++)
                                        {
                                            var foto = Model.Fotograflar[i];
                                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                                <img src="@foto.Url" class="d-block w-100" alt="@Model.Baslik Görsel @(i + 1)"
                                                     style="height: 400px; object-fit: cover;" loading="@(i == 0 ? "eager" : "lazy")">
                                            </div>
                                        }
                                    </div>
                                    @if (Model.Fotograflar.Count > 1)
                                    {
                                        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev" aria-label="Önceki">
                                            <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next" aria-label="Sonraki">
                                            <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                        </button>
                                    }
                                </div>
                            </div>

                            @if (Model.Fotograflar.Count > 1)
                            {
                                <div class="card-body">
                                    <div class="gallery-thumbs">
                                        @for (int i = 0; i < Model.Fotograflar.Count; i++)
                                        {
                                            var foto = Model.Fotograflar[i];
                                            <img src="@foto.Url" alt="Thumb @(i + 1)" class="@(i == 0 ? "active" : "")"
                                                 data-bs-target="#productCarousel" data-bs-slide-to="@i"
                                                 style="width: 80px; height: 60px; object-fit: cover; cursor: pointer;">
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                                <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                            </div>
                        }
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h1 class="h3 mb-2">@Model.Baslik</h1>
                                    <div class="d-flex align-items-center gap-3 text-muted">
                                        <span><i class="bi bi-geo-alt me-1"></i>@(Model.Sehir ?? "KKTC")</span>
                                        <span><i class="bi bi-calendar me-1"></i>@Model.OlusturmaTarihi.ToString("dd MMMM yyyy")</span>
                                        <span><i class="bi bi-eye me-1"></i>@Model.GoruntulenmeSayisi görüntülenme</span>
                                    </div>
                                </div>
                                @{
                                    var isFavorite = ViewBag.IsFavorite is bool b && b;
                                }
                                <button id="btn-toggle-favorite" class="btn @(isFavorite ? "btn-danger" : "btn-outline-secondary")" data-id="@Model.Id">
                                    <i class="bi @(isFavorite ? "bi-heart-fill" : "bi-heart")"></i> <span id="fav-text">@(isFavorite ? "Favorilerden Çıkar" : "Favorilere Ekle")</span>
                                </button>
                                @Html.AntiForgeryToken()
                                <div id="favError" class="alert alert-warning py-2 small d-none mt-2 mb-0"></div>
                            </div>

                            <div class="product-price display-5 text-primary fw-bold mb-4">
                                @Model.Fiyat.ToString("N0") @(Model.ParaBirimi == ParaBirimi.TRY ? "₺" : Model.ParaBirimi.ToString())
                            </div>

                            @if (Model.Attributes.Count > 0)
                            {
                                <h5 class="mb-3">İlan Özellikleri</h5>
                                <div class="eav-attributes mb-4">
                                    @foreach (var attr in Model.Attributes)
                                    {
                                        <div class="eav-item">
                                            <span class="eav-label">@attr.Label</span>
                                            <span class="eav-value">@attr.Value</span>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <h5 class="mb-3">İlan Özellikleri</h5>
                                <p class="text-muted mb-4">Belirtilmedi</p>
                            }

                            @if (!string.IsNullOrEmpty(Model.Aciklama))
                            {
                                <h5 class="mb-3">Açıklama</h5>
                                <div class="mb-4" style="white-space: pre-line">@Model.Aciklama</div>
                            }
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-3"><i class="bi bi-geo-alt me-2"></i>Konum</h5>
                            @if (Model.Enlem.HasValue && Model.Boylam.HasValue)
                            {
                                <div id="map" class="map-container"></div>
                                <p class="text-muted small mt-2 mb-0">
                                    <i class="bi bi-info-circle me-1"></i>Haritadaki konum yaklaşık olarak gösterilmektedir.
                                </p>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-1"></i>Bu ilan için konum bilgisi eklenmemiş.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="mb-4"><i class="bi bi-chat-dots me-2"></i>Satıcıya Soru Sor</h5>
                            <div class="alert alert-light mb-0">
                                <i class="bi bi-info-circle me-1"></i>Henüz soru yok.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card mb-4 d-lg-none">
                        <div class="card-body">
                            <div class="product-price h3 text-primary fw-bold mb-3">
                                @Model.Fiyat.ToString("N0") @(Model.ParaBirimi == ParaBirimi.TRY ? "₺" : Model.ParaBirimi.ToString())
                            </div>
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-cta btn-lg" data-bs-toggle="modal" data-bs-target="#featureNotAvailableModal">
                                    <i class="bi bi-telephone me-2"></i>Ara
                                </button>
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#featureNotAvailableModal">
                                    <i class="bi bi-chat me-2"></i>Mesaj Gönder
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="seller-card mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="seller-avatar me-3">
                                <i class="bi bi-person"></i>
                            </div>
                            <div>
                                <div class="seller-name">@(Model.SaticiAd ?? "Satıcı")</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#featureNotAvailableModal">
                                <i class="bi bi-chat me-2"></i>Mesaj Gönder
                            </button>
                            <a asp-controller="Listings" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-grid me-2"></i>Tüm İlanları Gör
                            </a>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="mb-3"><i class="bi bi-shield-check text-success me-2"></i>Güvenlik İpuçları</h6>
                            <ul class="list-unstyled mb-0 small text-muted">
                                <li class="mb-2"><i class="bi bi-check text-success me-1"></i>Ürünü görmeden ödeme yapmayın</li>
                                <li class="mb-2"><i class="bi bi-check text-success me-1"></i>Şüpheli ilanları bize bildirin</li>
                                <li class="mb-2"><i class="bi bi-check text-success me-1"></i>Halka açık yerlerde buluşun</li>
                                <li><i class="bi bi-check text-success me-1"></i>Bankaya özel bilgi vermeyin</li>
                            </ul>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="button" class="btn btn-link text-muted" data-bs-toggle="modal" data-bs-target="#featureNotAvailableModal">
                            <i class="bi bi-flag me-1"></i>İlanı Şikayet Et
                        </button>
                    </div>
                </div>
            </div>

            @{
                var relatedListings = ViewBag.RelatedListings as List<ListingCardDto>;
            }
            @if (relatedListings != null && relatedListings.Count > 0)
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="mb-3"><i class="bi bi-grid me-2"></i>Benzer İlanlar</h5>
                                <div class="row g-2">
                                    @foreach (var item in relatedListings)
                                    {
                                        <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                            <partial name="~/Views/Home/Partials/_ListingCardCompact.cshtml" model="item" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>

    <div class="modal fade" id="featureNotAvailableModal" tabindex="-1" aria-labelledby="featureNotAvailableModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="featureNotAvailableModalLabel">Bilgi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    Bu demo sürümünde bu özellik aktif değil.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
}

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const thumbs = document.querySelectorAll('.gallery-thumbs img');
            thumbs.forEach(thumb => {
                thumb.addEventListener('click', function () {
                    thumbs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            const carousel = document.getElementById('productCarousel');
            if (carousel) {
                carousel.addEventListener('slid.bs.carousel', function (e) {
                    thumbs.forEach(t => t.classList.remove('active'));
                    if (thumbs[e.to]) thumbs[e.to].classList.add('active');
                });
            }

            @if (Model.Enlem.HasValue && Model.Boylam.HasValue)
            {
                <text>
                const lat = parseFloat('@Model.Enlem.Value.ToString(CultureInfo.InvariantCulture)');
                const lng = parseFloat('@Model.Boylam.Value.ToString(CultureInfo.InvariantCulture)');
                const mapElement = document.getElementById('map');
                if (mapElement && window.L) {
                    const map = L.map('map').setView([lat, lng], 15);
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '© OpenStreetMap contributors'
                    }).addTo(map);

                    L.circle([lat, lng], {
                        color: '#0D6EFD',
                        fillColor: '#0D6EFD',
                        fillOpacity: 0.2,
                        radius: 200
                    }).addTo(map);
                }
                </text>
            }

            const btnFav = document.getElementById('btn-toggle-favorite');
            if (btnFav) {
                const favToggleUrl = '@Url.Action("Toggle", "Favorites")';
                const loginUrl = '@Url.Action("Login", "Account")';
                const favErrorEl = document.getElementById('favError');

                btnFav.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const icon = this.querySelector('i');
                    const textSpan = document.getElementById('fav-text');
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (!tokenInput) return;
                    const token = tokenInput.value;

                    favErrorEl.classList.add('d-none');
                    favErrorEl.textContent = '';

                    const wasFavorite = this.classList.contains('btn-danger');

                    if (!wasFavorite) {
                        this.classList.remove('btn-outline-secondary');
                        this.classList.add('btn-danger');
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        textSpan.textContent = "Favorilerden Çıkar";
                    } else {
                        this.classList.remove('btn-danger');
                        this.classList.add('btn-outline-secondary');
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        textSpan.textContent = "Favorilere Ekle";
                    }

                    fetch(favToggleUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: `ilanId=${id}`
                    })
                    .then(response => {
                        if (response.status === 401) {
                             window.location.href = `${loginUrl}?returnUrl=${encodeURIComponent(window.location.pathname)}`;
                             throw new Error('Unauthorized');
                        }
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.json();
                    })
                    .then(data => {
                        if (data.isFavorite) {
                            this.classList.remove('btn-outline-secondary');
                            this.classList.add('btn-danger');
                            icon.classList.remove('bi-heart');
                            icon.classList.add('bi-heart-fill');
                            textSpan.textContent = "Favorilerden Çıkar";
                        } else {
                            this.classList.remove('btn-danger');
                            this.classList.add('btn-outline-secondary');
                            icon.classList.remove('bi-heart-fill');
                            icon.classList.add('bi-heart');
                            textSpan.textContent = "Favorilere Ekle";
                        }
                    })
                    .catch(error => {
                        if (error.message !== 'Unauthorized') {
                            if (wasFavorite) {
                                this.classList.remove('btn-outline-secondary');
                                this.classList.add('btn-danger');
                                icon.classList.remove('bi-heart');
                                icon.classList.add('bi-heart-fill');
                                textSpan.textContent = "Favorilerden Çıkar";
                            } else {
                                this.classList.remove('btn-danger');
                                this.classList.add('btn-outline-secondary');
                                icon.classList.remove('bi-heart-fill');
                                icon.classList.add('bi-heart');
                                textSpan.textContent = "Favorilere Ekle";
                            }
                            favErrorEl.textContent = 'İşlem sırasında bir hata oluştu. Lütfen tekrar deneyin.';
                            favErrorEl.classList.remove('d-none');
                        }
                    });
                });
            }
        });
    </script>
}
