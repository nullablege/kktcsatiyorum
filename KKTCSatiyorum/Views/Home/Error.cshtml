@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<main class="main-content">
    <div class="container py-5">
        <div class="content-section text-center" style="max-width: 600px; margin: 0 auto;">
            <div class="py-4">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                <h1 class="mt-3 mb-2">Bir Hata Oluştu</h1>
                <p class="text-muted mb-4">İstediğiniz sayfa yüklenirken bir sorun oluştu. Lütfen daha sonra tekrar deneyin.</p>
                @if (Model?.ShowRequestId == true)
                {
                    <p class="text-muted small mb-4">
                        <strong>İstek No:</strong> @Model.RequestId
                    </p>
                }
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-cta">
                        <i class="bi bi-house me-1"></i>Ana Sayfa
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary">
                        <i class="bi bi-envelope me-1"></i>İletişim
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

