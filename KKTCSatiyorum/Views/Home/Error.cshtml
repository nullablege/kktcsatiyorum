@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<main class="main-content">
    <div class="container py-5">
        <div class="content-section text-center" style="max-width: 600px; margin: 0 auto;">
                @{
                    ViewData["StateIcon"] = "bi-exclamation-triangle";
                    ViewData["StateIconClass"] = "text-danger";
                    ViewData["StateTitle"] = "Bir Hata Oluştu";
                    ViewData["StateMessage"] = "İstediğiniz sayfa yüklenirken bir sorun oluştu. Lütfen daha sonra tekrar deneyin.";
                    ViewData["StateActionText"] = "Ana Sayfa";
                    ViewData["StateActionController"] = "Home";
                    ViewData["StateActionAction"] = "Index";
                    ViewData["StateActionBtnClass"] = "btn-cta";
                    ViewData["StateSecActionText"] = "İletişim";
                    ViewData["StateSecActionController"] = "Home";
                    ViewData["StateSecActionAction"] = "Contact";
                }
                <partial name="_StateMessage" />

                @if (Model?.ShowRequestId == true)
                {
                    <p class="text-muted small mt-4">
                        <strong>İstek No:</strong> @Model.RequestId
                    </p>
                }
        </div>
    </div>
</main>

