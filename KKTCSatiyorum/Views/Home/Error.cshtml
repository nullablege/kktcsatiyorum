@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<main class="main-content">
    <div class="container py-5">
        <div class="content-section text-center" style="max-width: 600px; margin: 0 auto;">
                <partial name="_StateMessage" model='new StateMessageViewModel {
                    Icon = "bi-exclamation-triangle",
                    IconClass = "text-danger",
                    Title = "Bir Hata Oluştu",
                    Message = "İstediğiniz sayfa yüklenirken bir sorun oluştu. Lütfen daha sonra tekrar deneyin.",
                    ActionText = "Ana Sayfa",
                    ActionController = "Home",
                    ActionAction = "Index",
                    ActionBtnClass = "btn-cta",
                    ActionIcon = "bi-house",
                    SecActionText = "İletişim",
                    SecActionController = "Home",
                    SecActionAction = "Contact"
                }' />

                @if (Model?.ShowRequestId == true)
                {
                    <p class="text-muted small mt-4">
                        <strong>İstek No:</strong> @Model.RequestId
                    </p>
                }
        </div>
    </div>
</main>

