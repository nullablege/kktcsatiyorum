@model KKTCSatiyorum.Models.Home.HomeIndexViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<partial name="Partials/_HomeCategoryQuickLinks" />

    <!-- Main Content with Sidebar Layout -->
    <main class="main-content">
        <div class="container-fluid px-3">
            <div class="row g-2">

<partial name="Partials/_HomeCategorySidebar" />

                <!-- MAIN CONTENT AREA -->
                <div class="col-lg-10 col-md-9">

                                        <!-- Vitrin Section -->
                    <section class="content-section">
                        <h1 class="visually-hidden">KKTC'nin Güvenilir İlan Platformu - KKTCSatıyorum</h1>
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="bi bi-star-fill"></i> Anasayfa Vitrini
                            </h2>
                            <a asp-controller="Listings" asp-action="Index" class="view-all-link">Tüm vitrin ilanlarını göster <i
                                    class="bi bi-chevron-right"></i></a>
                        </div>

                        <!-- Compact Product Grid -->
                        <div class="row g-2">
                            @foreach (var item in Model.FeaturedListings)
                            {
                                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                    <a asp-controller="Listings" asp-action="Detail" asp-route-slug="@item.Slug" class="card card-product-compact">
                                        <div class="card-img-wrapper">
                                            <img src="@item.KapakFotoUrl" alt="@item.Baslik">
                                        </div>
                                        <div class="card-body">
                                            <div class="product-title">@item.Baslik</div>
                                            <div class="product-price">@item.Fiyat.ToString("N0") @(item.ParaBirimi == ParaBirimi.TRY ? "₺" : item.ParaBirimi.ToString())</div>
                                            <div class="product-location">@(item.Sehir ?? "KKTC")</div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </section>

                                        <!-- Son Eklenenler Section -->
                    <section class="content-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="bi bi-clock"></i> Son Eklenen İlanlar
                            </h2>
                            <a asp-controller="Listings" asp-action="Index" class="view-all-link">Tümünü göster <i
                                    class="bi bi-chevron-right"></i></a>
                        </div>

                        <!-- Compact Product Grid -->
                        <div class="row g-2">
                            @foreach (var item in Model.LatestListings)
                            {
                                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                    <a asp-controller="Listings" asp-action="Detail" asp-route-slug="@item.Slug" class="card card-product-compact">
                                        <div class="card-img-wrapper">
                                            <img src="@item.KapakFotoUrl" alt="@item.Baslik">
                                        </div>
                                        <div class="card-body">
                                            <div class="product-title">@item.Baslik</div>
                                            <div class="product-price">@item.Fiyat.ToString("N0") @(item.ParaBirimi == ParaBirimi.TRY ? "₺" : item.ParaBirimi.ToString())</div>
                                            <div class="product-location">@(item.Sehir ?? "KKTC")</div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </section>

                    <!-- Emlak Section -->
                    <section class="content-section">
                        <div class="section-header">
                            <h2 class="section-title">
                                <i class="bi bi-house-door"></i> Emlak İlanları
                            </h2>
                            <a asp-controller="Listings" asp-action="Index" class="view-all-link">Tümünü göster <i
                                    class="bi bi-chevron-right"></i></a>
                        </div>

                        <div class="row g-2">
                            <!-- Card 1 -->
                            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                <a asp-controller="Listings" asp-action="Detail" asp-route-slug="ornek-ilan" class="card card-product-compact">
                                    <div class="card-img-wrapper">
                                        <img src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=200&h=150&fit=crop"
                                            alt="Daire">
                                    </div>
                                    <div class="card-body">
                                        <div class="product-title">Sahibinden Temiz Daire</div>
                                        <div class="product-price">2.100.000 TL</div>
                                        <div class="product-location">Lefkoşa</div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                <a asp-controller="Listings" asp-action="Detail" asp-route-slug="ornek-ilan" class="card card-product-compact">
                                    <div class="card-img-wrapper">
                                        <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=200&h=150&fit=crop"
                                            alt="Villa">
