                            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                <a asp-controller="Listings" asp-action="Detail" asp-route-slug="ornek-ilan" class="card card-product-compact">
                                    <div class="card-img-wrapper">
                                        <img src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?w=200&h=150&fit=crop"
                                            alt="Ev">
                                    </div>
                                    <div class="card-body">
                                        <div class="product-title">Adaklik Koyun Site</div>
                                        <div class="product-price">3.600.000 TL</div>
