
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - 420 İlan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/FE/css/styles.css" rel="stylesheet">
</head>

<body>

    <aside class="admin-sidebar">
        <div class="sidebar-brand">
            <h4><i class="bi bi-shop me-2"></i>KKTC Admin</h4>
        </div>
        <nav class="sidebar-nav">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a asp-area="Admin" asp-controller="Moderasyon" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Moderasyon" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-shield-check"></i> Moderasyon
            </a>

            <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Kategori" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-folder"></i> Kategoriler
            </a>            
            <button type="button" class="nav-link w-100 text-start border-0 bg-transparent" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">
                <i class="bi bi-people"></i> Kullanıcılar
            </button>
            <button type="button" class="nav-link w-100 text-start border-0 bg-transparent" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">
                <i class="bi bi-megaphone"></i> İlanlar
            </button>
            <button type="button" class="nav-link w-100 text-start border-0 bg-transparent" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">
                <i class="bi bi-bar-chart"></i> Raporlar
            </button>
            <button type="button" class="nav-link w-100 text-start border-0 bg-transparent" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">
                <i class="bi bi-gear"></i> Ayarlar
            </button>
            <a asp-area="Admin" asp-controller="Logs" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Logs" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-activity"></i> Denetim Kayıtları
            </a>
            <hr class="mx-3">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                <i class="bi bi-box-arrow-left"></i> Siteye Dön
            </a>
        </nav>
    </aside>


    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
   
    
    @await RenderSectionAsync("Scripts", required: false)


<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p>Bu kaydı silmek istediğinize emin misiniz?</p>
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteListingId" name="id" />
                    <div class="d-flex justify-content-end mt-3">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </div>
                </form>            
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="demoNotAvailableModal" tabindex="-1" aria-labelledby="demoNotAvailableModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="demoNotAvailableModalLabel"><i class="bi bi-info-circle me-2"></i>Bilgi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Bu özellik demo sürümünde aktif değildir.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
</body>

</html>






