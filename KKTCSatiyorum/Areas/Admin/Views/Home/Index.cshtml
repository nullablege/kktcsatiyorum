
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<main class="admin-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">Dashboard</h3>
            <p class="text-muted mb-0">Hoş geldin, Admin! Bugün 13 Aralık 2024</p>
        </div>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i> Admin
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">Profil</button></li>
                <li>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="dropdown-item text-danger">Çıkış</button>
    </form>
</li>
            </ul>
        </div>
    </div>


    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="stat-icon primary"><i class="bi bi-people"></i></div>
                <div class="stat-number">12.458</div>
                <div class="stat-label">Toplam Kullanıcı</div>
                <small class="text-success"><i class="bi bi-arrow-up"></i> +124 bu hafta</small>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="stat-icon success"><i class="bi bi-megaphone"></i></div>
                <div class="stat-number">45.892</div>
                <div class="stat-label">Toplam İlan</div>
                <small class="text-success"><i class="bi bi-arrow-up"></i> +342 bu hafta</small>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="stat-icon warning"><i class="bi bi-hourglass-split"></i></div>
                <div class="stat-number">12</div>
                <div class="stat-label">Bekleyen Onay</div>
                <a asp-area="Admin" asp-controller="Moderasyon" asp-action="Index" class="small text-primary">İncele →</a>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="stat-icon danger"><i class="bi bi-exclamation-triangle"></i></div>
                <div class="stat-number">3</div>
                <div class="stat-label">Şikayet Edilen</div>
                <button type="button" class="btn btn-link btn-sm p-0 small text-primary" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">İncele →</button>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">İlan & Kullanıcı İstatistikleri</h5>
                    <select class="form-select form-select-sm" style="width:auto;">
                        <option>Son 7 Gün</option>
                        <option selected>Son 30 Gün</option>
                        <option>Son 90 Gün</option>
                    </select>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center align-items-center bg-light rounded" style="height:300px;">
                        <div class="text-center text-muted">
                            <i class="bi bi-bar-chart-line fs-1"></i>
                            <p class="mt-2 mb-0">İstatistikler hazırlanıyor...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="Moderasyon" asp-action="Index" class="btn btn-warning w-100 mb-2">
                        <i class="bi bi-shield-check me-2"></i>Onay Havuzu (12)
                    </a>
                    <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-folder-plus me-2"></i>Kategori Ekle
                    </a>
                    <button type="button" class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">
                        <i class="bi bi-file-earmark-text me-2"></i>Rapor Oluştur
                    </button>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Kategori Dağılımı</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center align-items-center bg-light rounded" style="height:200px;">
                        <div class="text-center text-muted">
                            <i class="bi bi-pie-chart fs-1"></i>
                            <p class="mt-2 mb-0">Veri yok</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row g-4 mt-2">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Son Eklenen İlanlar</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex align-items-center">
                            <div class="rounded me-3 bg-secondary bg-opacity-10" style="width:50px;height:35px;"></div>
                            <div class="flex-grow-1">
                                <strong>2021 BMW 320i M Sport</strong>
                                <div class="small text-muted">Mehmet Y. • 10 dk önce</div>
                            </div>
                            <span class="badge bg-warning">Bekliyor</span>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <div class="rounded me-3 bg-secondary bg-opacity-10" style="width:50px;height:35px;"></div>
                            <div class="flex-grow-1">
                                <strong>3+1 Deniz Manzaralı Daire</strong>
                                <div class="small text-muted">Ayşe K. • 25 dk önce</div>
                            </div>
                            <span class="badge bg-success">Onaylı</span>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <div class="rounded me-3 bg-secondary bg-opacity-10" style="width:50px;height:35px;"></div>
                            <div class="flex-grow-1">
                                <strong>iPhone 15 Pro Max</strong>
                                <div class="small text-muted">Ali M. • 1 saat önce</div>
                            </div>
                            <span class="badge bg-success">Onaylı</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Son Kayıt Olan Kullanıcılar</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-person text-primary"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Zeynep Kaya</strong>
                                <div class="small text-muted">zeynep@email.com</div>
                            </div>
                            <small class="text-muted">5 dk önce</small>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-person text-success"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Can Demir</strong>
                                <div class="small text-muted">can@email.com</div>
                            </div>
                            <small class="text-muted">15 dk önce</small>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-person text-warning"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Elif Yıldız</strong>
                                <div class="small text-muted">elif@email.com</div>
                            </div>
                            <small class="text-muted">1 saat önce</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


