@model KKTCSatiyorum.Areas.Admin.Models.Moderasyon.ModerasyonIndexViewModel
@{
    ViewData["Title"] = "İlan Moderasyonu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
         <h1 class="h3 mb-0 text-gray-800">İlan Moderasyonu</h1>
         <span class="badge bg-warning text-dark">@Model.Listings.TotalCount Bekleyen İlan</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Onay Bekleyen İlanlar</h6>
        </div>
        <div class="card-body">
            @if(Model.Listings.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Durum</th>
                                <th>İlan Başlığı</th>
                                <th>Kullanıcı</th>
                                <th>Tarih</th>
                                <th>Kategori</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.Listings.Items)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-warning text-dark">Beklemede</span>
                                    </td>
                                    <td>
                                        <div class="fw-bold">@item.Baslik</div>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </td>
                                    <td>@item.SahipAdSoyad</td>
                                    <td>@item.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@item.KategoriAdi</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="Admin" asp-controller="Moderasyon" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Görüntüle" aria-label="Görüntüle">
                                                <i class="bi bi-eye"></i> <span class="d-none d-md-inline">Görüntüle</span>
                                            </a>
                                            <form asp-action="Approve" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-success" title="Onayla" aria-label="Onayla">
                                                    <i class="bi bi-check-lg"></i> <span class="d-none d-md-inline">Onayla</span>
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#rejectModal" 
                                                    data-id="@item.Id"
                                                    data-title="@item.Baslik"
                                                    title="Reddet"
                                                    aria-label="Reddet">
                                                <i class="bi bi-x-lg"></i> <span class="d-none d-md-inline">Reddet</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if(Model.Listings.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled"><span class="page-link">Sayfa @Model.Listings.Page / @((int)Math.Ceiling(Model.Listings.TotalCount / (double)Model.Listings.PageSize))</span></li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <partial name="_StateMessage" model="@(new KKTCSatiyorum.Models.StateMessageViewModel { 
                    Title = "Bekleyen Kayıt Yok", 
                    Message = "Bekleyen moderasyon kaydı yok.", 
                    Icon = "bi-check2-all", 
                    IconClass = "text-success" 
                })" />
            }
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">İlanı Reddet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Reject" method="post" id="rejectForm">
                    <input type="hidden" id="rejectListingId" name="id" />
                    <div class="mb-3">
                        <label for="RedNedeni" class="form-label">Red Nedeni</label>
                        <textarea class="form-control" id="RedNedeni" name="reason" rows="3" required></textarea>
                        <div class="form-text">Kullanıcıya bu neden gösterilecektir.</div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Reddet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


