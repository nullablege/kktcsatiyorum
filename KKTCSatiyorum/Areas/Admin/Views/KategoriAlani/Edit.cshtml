@using EntityLayer.Enums
@model KKTCSatiyorum.Areas.Admin.Models.EditKategoriAlaniViewModel
@{
    ViewData["Title"] = "Özellik Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
         <h1 class="h3 mb-0 text-gray-800">Özellik Düzenle</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Özellik Detayları</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="KategoriId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Özellik Adı</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Anahtar" class="form-label">Anahtar (Kod)</label>
                    <input asp-for="Anahtar" class="form-control" />
                    <span asp-validation-for="Anahtar" class="text-danger small"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="VeriTipi" class="form-label">Veri Tipi</label>
                        <select asp-for="VeriTipi" asp-items="Html.GetEnumSelectList<VeriTipi>()" class="form-select" id="veriTipiSelect"></select>
                        <span asp-validation-for="VeriTipi" class="text-danger small"></span>
                    </div>
                     <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check mb-2">
                            <input asp-for="ZorunluMu" class="form-check-input" />
                            <label asp-for="ZorunluMu" class="form-check-label">Zorunlu Alan</label>
                        </div>
                    </div>
                </div>

                <div class="mb-3" id="seceneklerWrapper" style="display:none;">
                    <label asp-for="SeceneklerText" class="form-label">Seçenekler (Tire ile ayırın: Kırmızı-Mavi-Yeşil)</label>
                    <textarea asp-for="SeceneklerText" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="SeceneklerText" class="text-danger small"></span>
                    <div class="form-text">Sadece "Tek Seçim" veri tipi için gereklidir.</div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-route-kategoriId="@Model.KategoriId" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-1"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-cta btn-lg">
                        <i class="bi bi-check-lg me-1"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleSecenekler() {
            var val = document.getElementById('veriTipiSelect').value;
            var wrapper = document.getElementById('seceneklerWrapper');
            if (val == '@((int)VeriTipi.TekSecim)') {
                wrapper.style.display = 'block';
            } else {
                wrapper.style.display = 'none';
            }
        }
        document.getElementById('veriTipiSelect').addEventListener('change', toggleSecenekler);
        toggleSecenekler();
    </script>
}
