@model KKTCSatiyorum.Areas.Admin.Models.EditKategoriAlaniViewModel

@{
    ViewData["Title"] = "Alan Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var isTekSecim = Model.VeriTipi == EntityLayer.Enums.VeriTipi.TekSecim;
}

<main class="admin-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Alan Düzenle</h1>
            <p class="text-muted mb-0">@Model.KategoriAdi - @Model.Ad</p>
        </div>
        <a class="btn btn-outline-secondary"
           asp-action="Index"
           asp-route-kategoriId="@Model.KategoriId">
            <i class="bi bi-arrow-left me-1"></i> Geri
        </a>
    </div>

    @if (TempData["SuccessMessage"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["ErrorMessage"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Alan Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="KategoriId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Anahtar" class="form-label"></label>
                                <input asp-for="Anahtar" class="form-control" />
                                <span asp-validation-for="Anahtar" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="VeriTipi" class="form-label"></label>
                                <select asp-for="VeriTipi" asp-items="Model.VeriTipiOptions" class="form-select"></select>
                                <span asp-validation-for="VeriTipi" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="SiraNo" class="form-label"></label>
                                <input asp-for="SiraNo" class="form-control" type="number" min="0" />
                                <span asp-validation-for="SiraNo" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3 d-flex align-items-end gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="ZorunluMu" />
                                    <label class="form-check-label" asp-for="ZorunluMu"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="FiltrelenebilirMi" />
                                    <label class="form-check-label" asp-for="FiltrelenebilirMi"></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="AktifMi" />
                                    <label class="form-check-label" asp-for="AktifMi"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i> Güncelle
                            </button>
                            <a class="btn btn-secondary" asp-action="Index" asp-route-kategoriId="@Model.KategoriId">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (isTekSecim)
        {
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Seçenekler</h5>
                        <span class="badge bg-primary">@Model.Secenekler.Count</span>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.Secenekler.Count == 0)
                        {
                            <div class="p-3 text-muted text-center">
                                Henüz seçenek yok.
                            </div>
                        }
                        else
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var secenek in Model.Secenekler)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@secenek.Deger</span>
                                        <form asp-action="DeactivateOption" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="optionId" value="@secenek.Id" />
                                            <input type="hidden" name="attributeId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Bu seçenek pasife çekilsin mi?');">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <form asp-action="AddOption" method="post" class="d-flex gap-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="attributeId" value="@Model.Id" />
                            <input type="text" name="deger" class="form-control form-control-sm" placeholder="Yeni seçenek..." required />
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
