@using EntityLayer.Enums
@model KKTCSatiyorum.Areas.Admin.Models.KategoriAlaniIndexViewModel
@{
    ViewData["Title"] = "Özellik Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
         <div>
             <h1 class="h3 mb-1 text-gray-800">Özellik Yönetimi</h1>
             <p class="mb-0 text-muted">@Model.KategoriAdi</p>
         </div>
         <div>
             <a asp-controller="Kategori" asp-action="Index" class="btn btn-outline-secondary me-2">
                 <i class="bi bi-arrow-left me-1"></i> Kategorilere Dön
             </a>
             <a asp-action="Create" asp-route-kategoriId="@Context.Request.Query["kategoriId"]" class="btn btn-cta">
                <i class="bi bi-plus-lg me-1"></i> Yeni Özellik
             </a>
         </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Özellikler</h6>
        </div>
        <div class="card-body">
            @if(Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Ad</th>
                                <th>Veri Tipi</th>
                                <th class="text-center">Zorunlu</th>
                                <th class="text-center">Seçenekler</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Ad</td>
                                    <td>@item.VeriTipi</td>
                                    <td class="text-center">
                                        @if(item.ZorunluMu)
                                        {
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-dash-circle text-muted"></i>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if(item.VeriTipi == VeriTipi.TekSecim)
                                        {
                                            <span class="badge bg-info">@item.SecenekSayisi</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteConfirmModal" 
                                                    data-listing-id="@item.Id"
                                                    data-url="@Url.Action("Delete", "KategoriAlani", new { area = "Admin", id = item.Id })">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-list-check fs-1 text-muted"></i>
                    <p class="text-muted mt-2">Bu kategoride henüz tanımlanmış özellik yok.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
