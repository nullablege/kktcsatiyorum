@model KKTCSatiyorum.Areas.Admin.Models.KategoriIndexViewModel
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
         <h1 class="h3 mb-0 text-gray-800">Kategori Yönetimi</h1>
         <a asp-action="Create" class="btn btn-cta">
            <i class="bi bi-plus-lg me-1"></i> Yeni Kategori
         </a>
    </div>

    <div class="row">
        <div class="col-lg-7">
             <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kategoriler</h6>
                </div>
                <div class="card-body">
                    @if(Model.Items.Any())
                    {
                        <div class="list-group">
                            @foreach(var item in Model.Items)
                            {
                                 <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">@item.Ad</h6>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteConfirmModal" 
                                                data-listing-id="@item.Id"
                                                data-url="@Url.Action("Delete", "Kategori", new { area = "Admin", id = item.Id })">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                 </div>
                            }
                        </div>
                    }
                    else
                    {
                        <partial name="_StateMessage" model="@(new KKTCSatiyorum.Models.StateMessageViewModel { 
                            Title = "Kategori Bulunamadı", 
                            Message = "Henüz sistemde kayıtlı bir kategori bulunmuyor.", 
                            Icon = "bi-folder-x", 
                            IconClass = "text-muted" 
                        })" />
                    }
                </div>
             </div>
        </div>
        
        <div class="col-lg-5">
             @if(Model.Selected != null)
             {
                 <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Düzenle: @Model.Selected.Ad</h6>
                         <a asp-action="Index" class="btn btn-sm btn-outline-secondary"><i class="bi bi-x"></i> Kapat</a>
                    </div>
                    <div class="card-body">
                         <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Selected.Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Selected.Ad" class="form-label">Kategori Adı</label>
                                <input asp-for="Selected.Ad" class="form-control" />
                                <span asp-validation-for="Selected.Ad" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Selected.UstKategoriId" class="form-label">Üst Kategori</label>
                                <select asp-for="Selected.UstKategoriId" asp-items="Model.Selected.UstKategoriOptions" class="form-select">
                                    <option value="">-- Ana Kategori --</option>
                                </select>
                                <span asp-validation-for="Selected.UstKategoriId" class="text-danger small"></span>
                            </div>

                             <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-cta">
                                    <i class="bi bi-check-lg me-1"></i> Güncelle
                                </button>
                            </div>
                         </form>
                    </div>
                 </div>
             }
             else
             {
                 <div class="card shadow mb-4 border-left-info">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle fs-4 text-info me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Düzenleme Modu</h6>
                                <p class="mb-0 small text-muted">Bir kategoriyi düzenlemek için listeden "kalem" ikonuna tıklayın.</p>
                            </div>
                        </div>
                    </div>
                 </div>
             }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
