@model KKTCSatiyorum.Areas.Admin.Models.CreateKategoriViewModel

@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<main class="admin-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Yeni Kategori</h1>
            <p class="text-muted mb-0">Yeni kategori oluþturun</p>
        </div>

        <a class="btn btn-outline-secondary"
           asp-area="Admin"
           asp-controller="Kategori"
           asp-action="Index">
            <i class="bi bi-arrow-left me-1"></i> Geri
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Kategori Bilgileri</h5>
                </div>

                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Kategori" asp-action="Create" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label"></label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: Spor & Outdoor" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UstKategoriId" class="form-label"></label>
                            <select asp-for="UstKategoriId" asp-items="Model.UstKategoriOptions" class="form-select"></select>
                            <span asp-validation-for="UstKategoriId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SiraNo" class="form-label"></label>
                            <input asp-for="SiraNo" class="form-control" type="number" min="1" />
                            <span asp-validation-for="SiraNo" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i> Kaydet
                            </button>
                            <a asp-area="Admin" asp-controller="Kategori" asp-action="Index" class="btn btn-secondary">
                                Ýptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-info">
                <div class="card-body">
                    <h6 class="text-info mb-2"><i class="bi bi-info-circle me-2"></i>Notlar</h6>
                    <ul class="small text-muted mb-0">
                        <li>Slug otomatik üretilir.</li>
                        <li>Üst kategori seçmezsen “Ana Kategori” (root) oluþturursun.</li>
                        <li>SýraNo 1’den baþlamalý.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
