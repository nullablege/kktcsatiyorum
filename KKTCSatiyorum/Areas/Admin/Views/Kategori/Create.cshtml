@model KKTCSatiyorum.Areas.Admin.Models.CreateKategoriViewModel
@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
         <h1 class="h3 mb-0 text-gray-800">Yeni Kategori</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kategori Bilgileri</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Kategori Adı</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UstKategoriId" class="form-label">Üst Kategori</label>
                    <select asp-for="UstKategoriId" asp-items="Model.UstKategoriOptions" class="form-select">
                        <option value="">-- Ana Kategori --</option>
                    </select>
                    <span asp-validation-for="UstKategoriId" class="text-danger small"></span>
                    <div class="form-text">Üst kategori seçmezseniz Ana Kategori olur.</div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-1"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-cta btn-lg">
                        <i class="bi bi-check-lg me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
