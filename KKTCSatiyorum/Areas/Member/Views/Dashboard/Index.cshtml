@model KKTCSatiyorum.Areas.Member.Models.Dashboard.DashboardIndexViewModel
@{
    var stats = Model?.Stats ?? new BusinessLayer.Features.Member.DTOs.MemberDashboardStatsDto();
    ViewData["Title"] = "Hesabım";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<main class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <div class="card">
                    <div class="card-body text-center py-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-person-circle text-primary" style="font-size:2.5rem;"></i>
                        </div>
                        <h5 class="mb-1">@(User.Identity?.Name ?? "Üye")</h5>
                        <p class="text-muted small mb-3">-</p>
                        <span class="badge bg-success"><i class="bi bi-patch-check me-1"></i>Doğrulanmış Üye</span>
                        <p class="text-muted small mt-3 mb-0">Üyelik: -</p>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <a asp-area="Member" asp-controller="Dashboard" asp-action="Index" class="list-group-item list-group-item-action active" onclick="showTab('listings'); return false;">
                                <i class="bi bi-grid me-2"></i>İlanlarım <span class="badge bg-primary float-end">@(stats.ActiveListingCount + stats.PendingListingCount)</span>
                            </a>
                            <a asp-area="Member" asp-controller="Notifications" asp-action="Index" class="list-group-item list-group-item-action" onclick="showTab('messages'); return false;">
                                <i class="bi bi-chat-dots me-2"></i>Mesajlar <span class="badge bg-danger float-end">@stats.UnreadNotificationCount</span>
                            </a>
                            <a asp-area="Member" asp-controller="Favorites" asp-action="Index" class="list-group-item list-group-item-action" onclick="showTab('favorites'); return false;">
                                <i class="bi bi-heart me-2"></i>Favorilerim <span class="badge bg-secondary float-end">@stats.FavoriteCount</span>
                            </a>
                            <a asp-area="Member" asp-controller="Profile" asp-action="Edit" class="list-group-item list-group-item-action">
                                <i class="bi bi-gear me-2"></i>Hesap Ayarları
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9">
                <div id="listingsTab">
                    <h1 class="visually-hidden">Hesabım - Dashboard</h1>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="mb-0">İlanlarım</h4>
                        <a asp-area="Member" asp-controller="MyListings" asp-action="Create" class="btn btn-cta"><i class="bi bi-plus-lg me-1"></i>Yeni İlan</a>
                    </div>

                    @if (stats.ActiveListingCount + stats.PendingListingCount == 0)
                    {
                        <div class="card mb-3">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-box-seam text-muted" style="font-size: 3rem;"></i>
                                <h6 class="mt-3 mb-1">Henüz ilanınız yok</h6>
                                <p class="text-muted mb-3">İlk ilanınızı oluşturmak için aşağıdaki butona tıklayın.</p>
                                <a asp-area="Member" asp-controller="MyListings" asp-action="Create" class="btn btn-cta">
                                    <i class="bi bi-plus-lg me-1"></i>İlan Oluştur
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <div id="messagesTab" style="display:none;">
                    <h4 class="mb-4">Mesajlar / Sorular</h4>
                    @if (stats.UnreadNotificationCount == 0)
                    {
                        <div class="card mb-3">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-chat-dots text-muted" style="font-size: 3rem;"></i>
                                <h6 class="mt-3 mb-1">Yeni mesajınız yok</h6>
                                <p class="text-muted mb-0">İlanlarınıza gelen mesajlar burada listelenecek.</p>
                            </div>
                        </div>
                    }
                </div>

                <div id="favoritesTab" style="display:none;">
                    <h4 class="mb-4">Favorilerim</h4>
                    @if (stats.FavoriteCount == 0)
                    {
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body text-center py-5">
                                        <i class="bi bi-heart text-muted" style="font-size: 3rem;"></i>
                                        <h6 class="mt-3 mb-1">Henüz favoriniz yok</h6>
                                        <p class="text-muted mb-0">Beğendiğiniz ilanlar burada görünecek.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

<footer class="footer">
    <div class="container">
        <div class="footer-bottom pt-0 mt-0 border-0">
            <p class="mb-0">&copy; 2024 KKTCSatiyorum. Tüm hakları saklıdır.</p>
        </div>
    </div>
</footer>

@section Scripts {
    <script>
        function showTab(tab) {
            document.getElementById('listingsTab').style.display = 'none';
            document.getElementById('messagesTab').style.display = 'none';
            document.getElementById('favoritesTab').style.display = 'none';
            document.getElementById(tab + 'Tab').style.display = 'block';

            document.querySelectorAll('.list-group-item').forEach(el => el.classList.remove('active'));
            event.target.closest('.list-group-item').classList.add('active');
        }
    </script>
}
