@model KKTCSatiyorum.Areas.Member.Models.Dashboard.DashboardIndexViewModel
@{
    var stats = Model?.Stats ?? new BusinessLayer.Features.Member.DTOs.MemberDashboardStatsDto();
    ViewData["Title"] = "Kontrol Paneli";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<main class="py-4">
    <div class="container">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="mb-1">Hoş Geldiniz, @(User.Identity?.Name ?? "Üye")</h2>
                <p class="text-muted">Hesap durumunuz ve ilanlarınızın özeti aşağıdadır.</p>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-5">
            <!-- Total/Active Listings -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-grid-fill text-primary fs-3"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="card-subtitle text-muted mb-1">Aktif İlanlar</h6>
                            <h2 class="card-title mb-0">@stats.ActiveListingCount</h2>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-controller="MyListings" asp-action="Index" class="text-decoration-none small fw-bold">
                            İlanları Yönet <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Pending Listings -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0 bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-hourglass-split text-warning fs-3"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="card-subtitle text-muted mb-1">Onay Bekleyen</h6>
                            <h2 class="card-title mb-0">@stats.PendingListingCount</h2>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-controller="MyListings" asp-action="Index" class="text-decoration-none small fw-bold">
                            Detayları Gör <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Favorites -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0 bg-danger bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-heart-fill text-danger fs-3"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="card-subtitle text-muted mb-1">Favoriler</h6>
                            <h2 class="card-title mb-0">@stats.FavoriteCount</h2>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-controller="Favorites" asp-action="Index" class="text-decoration-none small fw-bold">
                            Favorilere Git <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">Hızlı İşlemler</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <a asp-controller="MyListings" asp-action="Create" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                            <i class="bi bi-plus-circle text-primary me-3 fs-5"></i>
                            <div>
                                <h6 class="mb-0">Yeni İlan Ekle</h6>
                                <small class="text-muted">Hızlıca yeni bir emlak ilanı oluşturun.</small>
                            </div>
                            <i class="bi bi-chevron-right ms-auto text-muted"></i>
                        </a>
                        <a asp-controller="Profile" asp-action="Edit" class="list-group-item list-group-item-action py-3 d-flex align-items-center">
                            <i class="bi bi-person-gear text-secondary me-3 fs-5"></i>
                            <div>
                                <h6 class="mb-0">Profil Ayarları</h6>
                                <small class="text-muted">İletişim bilgilerinizi ve şifrenizi güncelleyin.</small>
                            </div>
                            <i class="bi bi-chevron-right ms-auto text-muted"></i>
                        </a>
                        <a href="javascript:void(0)" class="list-group-item list-group-item-action py-3 d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal">
                            <i class="bi bi-credit-card text-success me-3 fs-5"></i>
                            <div>
                                <h6 class="mb-0">Ödeme Yöntemleri</h6>
                                <small class="text-muted">Kayıtlı kartlarınızı yönetin (Yakında).</small>
                            </div>
                            <i class="bi bi-chevron-right ms-auto text-muted"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profile Summary / Status -->
            <div class="col-lg-4">
                <div class="card shadow-sm bg-primary text-white">
                    <div class="card-body text-center py-5">
                        <div class="bg-white bg-opacity-25 rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-person-circle text-white fs-1"></i>
                        </div>
                        <h5 class="mb-1">@(User.Identity?.Name ?? "Üye")</h5>
                        <p class="text-white-50 small mb-3">Standart Üyelik</p>
                        <hr class="border-white opacity-25" />
                        <div class="d-grid">
                            <a asp-controller="Profile" asp-action="Edit" class="btn btn-light text-primary">Profili Düzenle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
