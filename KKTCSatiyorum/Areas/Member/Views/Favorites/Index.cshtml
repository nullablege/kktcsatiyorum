@model KKTCSatiyorum.Areas.Member.Models.Favorites.FavoritesIndexViewModel
@{
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
    ViewData["Title"] = "Favorilerim";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-heart-fill me-2 text-danger"></i>Favorilerim</h2>
    </div>

    @if (TempData["ErrorMessage"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (Model.Listings.Items.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-heart text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Favori ilanınız yok</h5>
                <p class="text-muted">Beğendiğiniz ilanları favoriye ekleyerek burada görebilirsiniz.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">İlanları Keşfet</a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.Listings.Items)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@(string.IsNullOrEmpty(item.KapakFotoUrl) ? "/images/no-image.png" : item.KapakFotoUrl)" class="card-img-top" alt="@item.Baslik" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@item.Baslik</h5>
                            <p class="card-text text-primary fw-bold">@item.Fiyat.ToString("N0")</p>
                            <p class="card-text text-muted small"><i class="bi bi-geo-alt"></i> @item.Sehir</p>
                            <p class="card-text text-muted small"><i class="bi bi-tag"></i> @item.KategoriAdi</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                            <a asp-controller="Listings" asp-action="Detail" asp-route-slug="@item.SeoSlug" target="_blank" class="btn btn-sm btn-outline-primary">İlanı Gör</a>
                            
                            <button class="btn btn-sm btn-outline-danger btn-remove-fav" data-id="@item.IlanId">
                                <i class="bi bi-trash"></i> Kaldır
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Listings.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Listings.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Listings.Page - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.Listings.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Listings.Page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Listings.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Listings.Page + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            document.querySelectorAll('.btn-remove-fav').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    const card = this.closest('.col');

                    if(!confirm('Favorilerden kaldırmak istediğinize emin misiniz?')) return;

                    fetch('/Favorites/Toggle', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: `ilanId=${id}`
                    })
                    .then(response => {
                        if (!response.ok) throw new Error(response.statusText);
                        return response.json();
                    })
                    .then(data => {
                        if (!data.isFavorite) {
                            // Successfully removed
                            card.style.transition = 'opacity 0.5s';
                            card.style.opacity = '0';
                            setTimeout(() => card.remove(), 500);
                        } else {
                            console.error('Unexpected toggle state');
                        }
                    })
                    .catch(error => {
                        alert('İşlem başarısız.');
                        console.error(error);
                    });
                });
            });
        });
    </script>
}
@Html.AntiForgeryToken()
