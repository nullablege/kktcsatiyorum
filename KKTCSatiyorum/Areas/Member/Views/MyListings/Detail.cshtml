@model BusinessLayer.Features.Ilanlar.DTOs.MemberListingDetailDto
@using EntityLayer.Enums
@using System.Globalization

@{
    ViewData["Title"] = Model.Baslik;
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
    var isPublished = Model.Durum == IlanDurumu.Yayinda;
    ViewData["NeedsLeaflet"] = true;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <div class="d-flex align-items-center gap-2 mb-2">
                @switch (Model.Durum)
                {
                    case IlanDurumu.Taslak:
                        <span class="badge bg-secondary">Taslak</span>
                        break;
                    case IlanDurumu.OnayBekliyor:
                        <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                        break;
                    case IlanDurumu.Yayinda:
                        <span class="badge bg-success">Yayında</span>
                        break;
                    case IlanDurumu.Reddedildi:
                        <span class="badge bg-danger">Reddedildi</span>
                        break;
                    default:
                        <span class="badge bg-secondary">@Model.Durum</span>
                        break;
                }
                <small class="text-muted">
                   <i class="bi bi-calendar me-1"></i>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy")
                   @if (Model.YayinTarihi.HasValue)
                   {
                       <span> • Yayın: @Model.YayinTarihi.Value.ToString("dd.MM.yyyy")</span>
                   }
                </small>
            </div>
            <h1 class="h3 mb-1">@Model.Baslik</h1>
            @if (!string.IsNullOrEmpty(Model.RedNedeni))
            {
                <div class="text-danger small mt-1 text-truncate" style="max-width: 600px;" title="@Model.RedNedeni">
                    <i class="bi bi-exclamation-circle me-1"></i>@Model.RedNedeni
                </div>
            }
        </div>
        
        <div class="d-flex gap-1">
             @if (isPublished)
            {
                <a asp-area="" asp-controller="Listings" asp-action="Detail" asp-route-slug="@Model.SeoSlug" class="btn btn-sm btn-outline-primary" title="Detay" target="_blank">
                    <i class="bi bi-eye"></i> <span class="d-none d-md-inline">Görüntüle</span>
                </a>
                <button type="button" class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal" title="Yayından Kaldır">
                    <i class="bi bi-pause-circle"></i> <span class="d-none d-md-inline">Durdur</span>
                </button>
            }
            else
            {
                 <button type="button" class="btn btn-sm btn-outline-secondary" disabled title="Yayında değil">
                    <i class="bi bi-eye-slash"></i>
                </button>
            }
            
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary" title="Düzenle">
                <i class="bi bi-pencil"></i> <span class="d-none d-md-inline">Düzenle</span>
            </a>
            
            <button type="button" class="btn btn-sm btn-outline-danger" 
                    data-bs-toggle="modal" 
                    data-bs-target="#deleteConfirmModal" 
                    data-listing-id="@Model.Id"
                    title="Sil">
                <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Sil</span>
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body p-0">
                     @if (Model.Photos != null && Model.Photos.Any())
                    {
                        var cover = Model.Photos.FirstOrDefault(x => x.KapakMi) ?? Model.Photos.First();
                        <div class="position-relative bg-light rounded-top d-flex justify-content-center align-items-center" style="min-height: 300px; max-height: 400px; overflow: hidden;">
                             <img src="@cover.Url" class="img-fluid w-100" style="object-fit: cover; max-height: 400px;" alt="@Model.Baslik" />
                        </div>
                        
                        if(Model.Photos.Count > 1) {
                            <div class="d-flex gap-2 p-3 overflow-auto border-top">
                                @foreach(var p in Model.Photos) {
                                    <div style="flex: 0 0 80px; height: 60px;" class="rounded overflow-hidden border">
                                        <img src="@p.Url" style="width: 100%; height: 100%; object-fit: cover;" alt="İlan Fotoğrafı" />
                                    </div>
                                }
                            </div>
                        }
                    } 
                    else 
                    {
                        <div class="text-center py-5 bg-light rounded">
                            <i class="bi bi-images text-muted" style="font-size: 3rem;"></i>
                            <h6 class="mt-3 text-muted fw-normal">Bu ilana ait fotoğraf bulunmuyor.</h6>
                            <p class="small text-muted mb-0">İlanınızı daha çekici kılmak için düzenleme sayfasından fotoğraf ekleyebilirsiniz.</p>
                        </div>
                    }
                </div>
            </div>

             <div class="card mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 h6 fw-bold">Açıklama</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0 text-break" style="white-space: pre-line">@Model.Aciklama</p>
                </div>
            </div>

            @if (Model.Enlem.HasValue && Model.Boylam.HasValue)
            {
                 <div class="card mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 h6 fw-bold">Konum</h5>
                    </div>
                    <div class="card-body p-0">
                         <div id="staticMap" style="height: 300px;" 
                              data-lat="@Model.Enlem.Value.ToString(CultureInfo.InvariantCulture)"
                              data-lng="@Model.Boylam.Value.ToString(CultureInfo.InvariantCulture)">
                         </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 h6 fw-bold">Konum</h5>
                    </div>
                    <div class="card-body py-5 text-center text-muted">
                        <i class="bi bi-geo-alt fs-1 d-block mb-2"></i>
                        <span>Konum belirtilmedi</span>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <span class="text-muted">Fiyat</span>
                        <span class="h4 text-primary fw-bold mb-0">@Model.Fiyat.ToString("N0") @Model.ParaBirimi</span>
                    </div>
                     <hr/>
                     <div class="mb-4">
                         <h6 class="small text-muted text-uppercase mb-3 fw-bold">Lokasyon</h6>
                         <div class="d-flex align-items-center gap-2">
                             <i class="bi bi-geo-alt text-muted"></i>
                             <div>
                                 <div class="fw-medium">@(Model.Sehir ?? "-")</div>
                                 <div class="small text-muted">@(Model.Ilce ?? "-")</div>
                             </div>
                         </div>
                     </div>
                     
                     @if(Model.Attributes != null && Model.Attributes.Any()) {
                          <hr/>
                          <h6 class="small text-muted text-uppercase mb-3 fw-bold">Özellikler</h6>
                          <div class="row g-3">
                              @foreach(var attr in Model.Attributes) {
                                  if(!string.IsNullOrEmpty(attr.Value)) {
                                      <div class="col-12 col-md-6">
                                          <label class="small text-muted d-block mb-1">@attr.Ad</label>
                                          <div class="fw-medium small">
                                              @if(attr.VeriTipi == EntityLayer.Enums.VeriTipi.DogruYanlis) {
                                                  @if(attr.Value == "true") {
                                                       <span class="text-success"><i class="bi bi-check-circle me-1"></i>Evet</span>
                                                  } else {
                                                       <span class="text-muted">Hayır</span>
                                                  }
                                              } else if (attr.VeriTipi == EntityLayer.Enums.VeriTipi.TekSecim) {
                                                   @(attr.Secenekler?.FirstOrDefault(s => s.Id.ToString() == attr.Value)?.Deger ?? attr.Value)
                                              } else {
                                                  @attr.Value
                                              }
                                          </div>
                                      </div>
                                  }
                              }
                          </div>
                     }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
}

@section Scripts {
}
