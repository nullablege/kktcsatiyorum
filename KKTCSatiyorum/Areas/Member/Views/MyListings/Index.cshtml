@model KKTCSatiyorum.Areas.Member.Models.MyListings.MyListingsIndexViewModel
@{
    ViewData["Title"] = "İlanlarım";
        Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<main class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>İlanlarım</h2>
            <a asp-area="Member" asp-controller="MyListings" asp-action="Create" class="btn btn-cta">
                <i class="bi bi-plus-lg me-1"></i> Yeni İlan
            </a>
        </div>

    @if (TempData["SuccessMessage"] is string successMsg)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

        @if (Model.Listings.Items.Count == 0)
        {
            <partial name="_StateMessage" model="@(new KKTCSatiyorum.Models.StateMessageViewModel {
                Title = "Henüz ilanınız bulunmuyor",
                Message = "İlk ilanınızı oluşturmak için aşağıdaki butona tıklayın.",
                Icon = "bi-box-seam",
                IconClass = "text-muted",
                ActionText = "İlan Oluştur",
                ActionAction = "Create",
                ActionController = "MyListings",
                ActionArea = "Member",
                ActionBtnClass = "btn-cta",
                ActionIcon = "bi-plus-lg"
            })" />
        }
        else
        {
            @foreach (var item in Model.Listings.Items)
            {
                var isPublished = item.Durum == EntityLayer.Enums.IlanDurumu.Yayinda;
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row g-3 align-items-center">
                            <div class="col-3 col-md-2">
                                @if (!string.IsNullOrEmpty(item.KapakFotoUrl))
                                {
                                    <img src="@item.KapakFotoUrl" class="img-fluid rounded" style="height:70px;object-fit:cover;width:100%;" alt="@item.Baslik">
                                }
                                else
                                {
                                    <div class="rounded bg-secondary d-flex align-items-center justify-content-center" style="height:70px;width:100%;">
                                        <i class="bi bi-image text-white"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-9 col-md-6">
                                @switch (item.Durum)
                                {
                                    case EntityLayer.Enums.IlanDurumu.Taslak:
                                        <span class="badge bg-secondary small">Taslak</span>
                                        break;
                                    case EntityLayer.Enums.IlanDurumu.OnayBekliyor:
                                        <span class="badge bg-warning text-dark small">Onay Bekliyor</span>
                                        break;
                                    case EntityLayer.Enums.IlanDurumu.Yayinda:
                                        <span class="badge bg-success small">Yayında</span>
                                        break;
                                    case EntityLayer.Enums.IlanDurumu.Reddedildi:
                                        <span class="badge bg-danger small">Reddedildi</span>
                                        break;
                                    default:
                                        <span class="badge bg-dark small">@item.Durum</span>
                                        break;
                                }
                                <h6 class="mb-1">@item.Baslik</h6>
                                <p class="text-primary fw-bold mb-0">@item.Fiyat.ToString("N0") @(item.ParaBirimi == EntityLayer.Enums.ParaBirimi.TRY ? "₺" : item.ParaBirimi.ToString())</p>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>@item.OlusturmaTarihi.ToString("dd.MM.yyyy")
                                    @if (item.YayinTarihi.HasValue)
                                    {
                                        <span> • Yayın: @item.YayinTarihi.Value.ToString("dd.MM.yyyy")</span>
                                    }
                                </small>
                                @if (!string.IsNullOrEmpty(item.RedNedeni))
                                {
                                    <div class="text-danger small mt-1">@item.RedNedeni</div>
                                }
                            </div>
                            <div class="col-12 col-md-4 text-md-end">
                                @if (isPublished)
                                {
                                    <a asp-area="" asp-controller="Listings" asp-action="Detail" asp-route-slug="@item.SeoSlug" class="btn btn-sm btn-outline-primary me-1" title="Görüntüle" target="_blank">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-warning me-1" data-bs-toggle="modal" data-bs-target="#demoNotAvailableModal" title="Yayından Kaldır">
                                        <i class="bi bi-pause-circle"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-secondary me-1" disabled title="Yayında değil">
                                        <i class="bi bi-eye-slash"></i>
                                    </button>
                                }
                                <a asp-area="Member" asp-controller="MyListings" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="Düzenle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-area="Member" asp-controller="MyListings" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bu ilanı silmek istediğinizden emin misiniz?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        @if (Model.Listings.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Listings.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Listings.Page - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.Listings.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Listings.Page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Listings.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Listings.Page + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    </div>
</main>
