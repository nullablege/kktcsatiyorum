@model KKTCSatiyorum.Areas.Member.Models.MyListingsIndexViewModel
@{
    ViewData["Title"] = "İlanlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>İlanlarım</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Yeni İlan
        </a>
    </div>

    @if (TempData["SuccessMessage"] is string successMsg)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (Model.Listings.Items.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-box-seam text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Henüz ilanınız bulunmuyor</h5>
                <p class="text-muted mb-3">İlk ilanınızı oluşturmak için aşağıdaki butona tıklayın.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i> İlan Oluştur
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:60px;"></th>
                            <th>Başlık</th>
                            <th>Durum</th>
                            <th>Oluşturma</th>
                            <th>Yayın</th>
                            <th>Kategori</th>
                            <th style="width:150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Listings.Items)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.KapakFotoUrl))
                                    {
                                        <img src="@item.KapakFotoUrl" class="rounded" style="width:50px;height:35px;object-fit:cover;" alt="@item.Baslik">
                                    }
                                    else
                                    {
                                        <div class="rounded bg-secondary d-flex align-items-center justify-content-center" style="width:50px;height:35px;">
                                            <i class="bi bi-image text-white"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <strong>@item.Baslik</strong>
                                        <div class="small text-muted">@item.Fiyat.ToString("N0") @(item.ParaBirimi == EntityLayer.Enums.ParaBirimi.TRY ? "₺" : item.ParaBirimi.ToString())</div>
                                    </div>
                                </td>
                                <td>
                                    @switch (item.Durum)
                                    {
                                        case EntityLayer.Enums.IlanDurumu.Taslak:
                                            <span class="badge bg-secondary">Taslak</span>
                                            break;
                                        case EntityLayer.Enums.IlanDurumu.OnayBekliyor:
                                            <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                            break;
                                        case EntityLayer.Enums.IlanDurumu.Yayinda:
                                            <span class="badge bg-success">Yayında</span>
                                            break;
                                        case EntityLayer.Enums.IlanDurumu.Reddedildi:
                                            <span class="badge bg-danger" title="@item.RedNedeni">Reddedildi</span>
                                            if (!string.IsNullOrEmpty(item.RedNedeni))
                                            {
                                                <br><small class="text-danger">@item.RedNedeni</small>
                                            }
                                            break;
                                        default:
                                            <span class="badge bg-dark">@item.Durum</span>
                                            break;
                                    }
                                </td>
                                <td><small>@item.OlusturmaTarihi.ToString("dd.MM.yyyy")</small></td>
                                <td>
                                    @if (item.YayinTarihi.HasValue)
                                    {
                                        <small>@item.YayinTarihi.Value.ToString("dd.MM.yyyy")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td><span class="badge bg-primary">@item.KategoriAdi</span></td>
                                <td>
                                    @if (item.Durum == EntityLayer.Enums.IlanDurumu.Yayinda)
                                    {
                                        <a href="/ilan/@item.SeoSlug" class="btn btn-sm btn-outline-primary me-1" title="Görüntüle" target="_blank">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-secondary me-1" disabled title="Yayında değil">
                                            <i class="bi bi-eye-slash"></i>
                                        </button>
                                    }
                                    <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bu ilanı silmek istediğinizden emin misiniz?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.Listings.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Listings.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Listings.Page - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.Listings.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Listings.Page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Listings.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Listings.Page + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
